@model AROCONSTRUCCIONES.Dtos.RegisterDto
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
    <div class="flex items-center gap-3">
        <div class="bg-blue-600 p-3 rounded-xl shadow-lg shadow-blue-200">
            <i class="fas fa-user-shield text-white text-xl"></i>
        </div>
        <div>
            <h2 class="text-2xl font-bold text-slate-800">Control de Accesos</h2>
            <p class="text-slate-500 text-sm">Administre las credenciales y permisos del personal.</p>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <div class="lg:col-span-2">
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
                <h3 class="font-bold text-slate-700 flex items-center">
                    <i class="fas fa-user-plus mr-2 text-blue-500"></i>
                    Datos de la Nueva Cuenta
                </h3>
            </div>

            <div class="p-6">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="mb-6 flex items-center gap-3 rounded-xl bg-green-50 p-4 text-sm text-green-700 border border-green-100 animate-pulse">
                        <i class="fas fa-check-circle text-lg"></i>
                        <span class="font-medium">@TempData["SuccessMessage"]</span>
                    </div>
                }

                <form asp-action="Index" method="post" class="space-y-6">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All" class="rounded-xl bg-red-50 p-4 text-sm text-red-700 border border-red-100"></div>
                    }

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label asp-for="NombreCompleto" class="text-sm font-semibold text-slate-700 ml-1"></label>
                            <div class="relative group">
                                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400 group-focus-within:text-blue-500 transition-colors">
                                    <i class="fas fa-id-card"></i>
                                </span>
                                <input asp-for="NombreCompleto" placeholder="Ej. Juan Pérez"
                                       class="block w-full pl-10 pr-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-700 focus:bg-white focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all outline-none" />
                            </div>
                            <span asp-validation-for="NombreCompleto" class="text-xs text-red-500 italic ml-1"></span>
                        </div>

                        <div class="space-y-2">
                            <label asp-for="Email" class="text-sm font-semibold text-slate-700 ml-1"></label>
                            <div class="relative group">
                                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400 group-focus-within:text-blue-500 transition-colors">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input asp-for="Email" placeholder="usuario@aroconstrucciones.com"
                                       class="block w-full pl-10 pr-4 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-700 focus:bg-white focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all outline-none" />
                            </div>
                            <span asp-validation-for="Email" class="text-xs text-red-500 italic ml-1"></span>
                        </div>
                    </div>

                    <div x-data="{ showPass: false }" class="grid grid-cols-1 md:grid-cols-2 gap-6 p-4 bg-slate-50 rounded-2xl border border-slate-100">
                        <div class="space-y-2">
                            <label asp-for="Password" class="text-sm font-semibold text-slate-700 ml-1"></label>
                            <div class="relative">
                                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input :type="showPass ? 'text' : 'password'" asp-for="Password"
                                       class="block w-full pl-10 pr-10 py-2.5 bg-white border border-slate-200 rounded-xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all outline-none" />
                                <button type="button" @@click="showPass = !showPass" class="absolute inset-y-0 right-0 pr-3 flex items-center text-slate-400 hover:text-blue-600 transition-colors">
                                    <i class="fas" :class="showPass ? 'fa-eye-slash' : 'fa-eye'"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-xs text-red-500 italic ml-1"></span>
                        </div>

                        <div class="space-y-2">
                            <label asp-for="ConfirmPassword" class="text-sm font-semibold text-slate-700 ml-1"></label>
                            <div class="relative">
                                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400">
                                    <i class="fas fa-shield-alt"></i>
                                </span>
                                <input :type="showPass ? 'text' : 'password'" asp-for="ConfirmPassword"
                                       class="block w-full pl-10 pr-4 py-2.5 bg-white border border-slate-200 rounded-xl focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all outline-none" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-xs text-red-500 italic ml-1"></span>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="RoleName" class="text-sm font-semibold text-slate-700 ml-1">Rol del Sistema</label>
                        <div class="relative group">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400 group-focus-within:text-blue-500">
                                <i class="fas fa-user-tag"></i>
                            </span>
                            <select asp-for="RoleName" asp-items="@Model.RolesList"
                                    class="block w-full pl-10 pr-10 py-2.5 bg-slate-50 border border-slate-200 rounded-xl text-slate-700 appearance-none focus:bg-white focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all outline-none cursor-pointer">
                                <option value="">Seleccione el nivel de acceso...</option>
                            </select>
                            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-slate-400">
                                <i class="fas fa-chevron-down text-xs"></i>
                            </div>
                        </div>
                        <span asp-validation-for="RoleName" class="text-xs text-red-500 italic ml-1"></span>
                    </div>

                    <div class="pt-4 flex justify-end">
                        <button type="submit" class="flex items-center gap-2 px-8 py-3 bg-blue-600 text-white font-bold rounded-xl shadow-lg shadow-blue-200 hover:bg-blue-700 hover:-translate-y-0.5 active:scale-95 transition-all">
                            <i class="fas fa-save"></i>
                            Crear Usuario
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="space-y-6">
        <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl p-6 text-white shadow-xl">
            <h4 class="font-bold text-lg mb-4 flex items-center gap-2 text-blue-400">
                <i class="fas fa-info-circle"></i>
                Guía de Seguridad
            </h4>
            <div class="space-y-5">
                <div class="flex gap-3">
                    <div class="mt-1"><span class="flex w-2 h-2 rounded-full bg-red-500 shadow-[0_0_8px_rgba(239,68,68,0.8)]"></span></div>
                    <div>
                        <p class="text-xs font-bold uppercase tracking-wider text-slate-300">Administrador</p>
                        <p class="text-sm text-slate-400">Acceso total. Puede gestionar finanzas, usuarios y configuración técnica.</p>
                    </div>
                </div>
                <div class="flex gap-3">
                    <div class="mt-1"><span class="flex w-2 h-2 rounded-full bg-blue-500 shadow-[0_0_8px_rgba(59,130,246,0.8)]"></span></div>
                    <div>
                        <p class="text-xs font-bold uppercase tracking-wider text-slate-300">Usuario (Staff)</p>
                        <p class="text-sm text-slate-400">Gestión de proyectos, presupuestos y requerimientos operativos.</p>
                    </div>
                </div>
                <div class="flex gap-3">
                    <div class="mt-1"><span class="flex w-2 h-2 rounded-full bg-amber-500 shadow-[0_0_8px_rgba(245,158,11,0.8)]"></span></div>
                    <div>
                        <p class="text-xs font-bold uppercase tracking-wider text-slate-300">Almacenero</p>
                        <p class="text-sm text-slate-400">Acceso restringido a inventarios, movimientos y despachos.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-blue-50 rounded-2xl p-5 border border-blue-100">
            <p class="text-sm text-blue-700 leading-relaxed">
                <i class="fas fa-lightbulb mr-2"></i>
                <strong>Tip:</strong> Una contraseña segura debe tener al menos 8 caracteres, números y un carácter especial.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}