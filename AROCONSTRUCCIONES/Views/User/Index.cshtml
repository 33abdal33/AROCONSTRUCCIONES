@model AROCONSTRUCCIONES.Dtos.RegisterDto
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="mb-6">
    <h2 class="text-2xl font-semibold text-slate-800">Gestión de Usuarios</h2>
    <p class="text-slate-500">Crear nuevas cuentas de usuario y asignar roles.</p>
</div>

<div class="bg-white p-6 rounded-lg shadow-md max-w-2xl">

    <h3 class="text-xl font-semibold text-slate-700 mb-4 border-b pb-2">Crear Nuevo Usuario</h3>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 rounded-md bg-green-50 p-4 text-sm text-green-700">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Index" method="post" class="space-y-4">

        <div asp-validation-summary="All" class="mb-4 rounded-md bg-red-50 p-3 text-sm text-red-700"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="NombreCompleto" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="NombreCompleto" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="NombreCompleto" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Email" class="text-sm text-red-600"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Password" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="ConfirmPassword" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
            </div>
        </div>

        <div>
            <label asp-for="RoleName" class="block text-sm font-medium text-gray-700"></label>
            <select asp-for="RoleName" asp-items="@Model.RolesList" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <option value="">Seleccione un rol...</option>
            </select>
            <span asp-validation-for="RoleName" class="text-sm text-red-600"></span>
        </div>

        <div class="pt-4">
            <button type="submit" class="flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none">
                <i class="fas fa-plus mr-2"></i> Crear Usuario
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}