@model AROCONSTRUCCIONES.Dtos.LoginDto
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // <-- ¡Importante! No usamos el Layout principal
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConstructorERP</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body { font-family: 'Inter', sans-serif; }
    </style>
</head>
<body class="bg-slate-100">
    <div class="flex min-h-screen items-center justify-center p-4">
        <div class="w-full max-w-md">

            <div class="flex justify-center items-center mb-6">
                <i class="fas fa-building text-3xl text-blue-600 mr-3"></i>
                <h1 class="text-3xl font-bold text-slate-700">Constructora ARO</h1>
            </div>

            <div class="bg-white p-8 rounded-lg shadow-xl">
                <h2 class="text-2xl font-semibold text-center text-slate-800 mb-6">Iniciar Sesión</h2>

                <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                    <div asp-validation-summary="ModelOnly" class="mb-4 rounded-md bg-red-50 p-3 text-sm text-red-700"></div>

                    <div class="mb-4">
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
                        <input asp-for="Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Email" class="text-sm text-red-600"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700">Contraseña</label>
                        <input asp-for="Password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="Password" class="text-sm text-red-600"></span>
                    </div>

                    <div class="flex items-center justify-between mb-6">
                        <div class="flex items-center">
                            <input asp-for="RememberMe" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                            <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div>
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Ingresar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>