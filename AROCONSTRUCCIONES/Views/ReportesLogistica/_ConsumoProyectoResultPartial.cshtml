@model IEnumerable<AROCONSTRUCCIONES.Dtos.ConsumoMaterialProyectoDto>

@* 1. ESTILOS DE LIMPIEZA TOTAL *@
<style>
    .consumo-table {
        border-bottom: none !important;
    }

        .consumo-table thead th {
            border-bottom: none !important;
            letter-spacing: normal !important;
        }

        .consumo-table tbody tr:last-child td {
            border-bottom: none !important;
        }

    /* Animación para las barras de progreso al cargar */
    @@keyframes grow {
        from {
            width: 0;
        }
    }

    .progress-fill {
        animation: grow 1s ease-out;
    }
</style>

<div class="animate-in fade-in slide-in-from-bottom-4 duration-500">

    @* 2. Encabezado y Acción de Exportación *@
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8 mt-6">
        <div>
            <div class="flex items-center gap-2 mb-1">
                <span class="px-2 py-0.5 rounded bg-emerald-100 text-emerald-700 text-[10px] font-black uppercase tracking-wider">Reporte de Costos</span>
            </div>
            <h3 class="text-2xl font-bold text-slate-800 tracking-tight">Análisis de Consumo por Obra</h3>
            <p class="text-sm font-medium text-slate-500 mt-1">Impacto económico y desglose de materiales destinados al proyecto.</p>
        </div>

        <a href="@Url.Action("ExportarConsumoExcel", "ReportesLogistica", new { proyectoId = ViewBag.ProyectoId })"
           class="flex items-center px-6 py-3 bg-white border-2 border-emerald-500 text-emerald-600 hover:bg-emerald-500 hover:text-white text-xs font-black rounded-2xl shadow-sm transition-all gap-2 uppercase tracking-widest group">
            <i class="fas fa-file-excel text-lg group-hover:scale-110 transition-transform"></i>
            Exportar a Excel
        </a>
    </div>

    @* 3. Card de Inversión Ejecutada (Resumen Ejecutivo) *@
    <div class="bg-gradient-to-br from-emerald-600 to-teal-700 p-8 rounded-[2rem] shadow-xl shadow-emerald-200/50 text-white mb-10 relative overflow-hidden">
        <div class="relative z-10 flex flex-col md:flex-row justify-between items-center gap-6">
            <div class="text-center md:text-left">
                <p class="text-emerald-100 text-xs font-bold uppercase tracking-[0.2em] mb-2 opacity-80">Inversión Total Ejecutada</p>
                <h3 class="text-5xl font-black tracking-tighter">
                    S/ @Model.Sum(x => x.CostoTotalAcumulado).ToString("N2")
                </h3>
                <p class="text-emerald-200 text-[11px] mt-4 font-medium italic">
                    * Monto calculado según salidas reales de almacén valorizadas.
                </p>
            </div>
            <div class="hidden md:flex w-20 h-20 bg-white/10 rounded-3xl items-center justify-center backdrop-blur-md border border-white/20">
                <i class="fas fa-hard-hat text-4xl text-emerald-100"></i>
            </div>
        </div>
        @* Decoración abstracta *@
        <div class="absolute -right-10 -bottom-10 w-40 h-40 bg-white/5 rounded-full blur-3xl"></div>
    </div>

    @* 4. Tabla de Resultados (Diseño SaaS) *@
    <div class="bg-white rounded-3xl border border-slate-200 shadow-xl shadow-slate-200/30 overflow-hidden">
        <div class="p-6 border-b border-slate-50 flex items-center justify-between bg-slate-50/50">
            <h4 class="text-xs font-black text-slate-400 uppercase tracking-widest">Desglose de Materiales e Insumos</h4>
            <span class="text-[11px] font-bold text-slate-400">@Model.Count() Ítems registrados</span>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-100 consumo-table">
                <thead class="bg-slate-50/50">
                    <tr>
                        <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider">Material / Unidad</th>
                        <th class="px-6 py-4 text-center text-[11px] font-bold text-slate-400 uppercase tracking-wider">Cant. Consumida</th>
                        <th class="px-6 py-4 text-right text-[11px] font-bold text-slate-400 uppercase tracking-wider">Costo Acumulado</th>
                        <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider w-1/4">Impacto (%)</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50 bg-white">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-slate-50/80 transition-all group">
                            <td class="px-6 py-5">
                                <div class="text-sm font-bold text-slate-800 group-hover:text-emerald-700 transition-colors">@item.MaterialNombre</div>
                                <div class="text-[10px] font-bold text-slate-400 uppercase mt-0.5">@item.UnidadMedida</div>
                            </td>
                            <td class="px-6 py-5 text-center text-sm font-mono font-bold text-slate-600">
                                @item.CantidadTotal.ToString("N2")
                            </td>
                            <td class="px-6 py-5 text-right">
                                <span class="text-sm font-black text-slate-900 tracking-tight">S/ @item.CostoTotalAcumulado.ToString("N2")</span>
                            </td>
                            <td class="px-6 py-5">
                                <div class="flex items-center gap-3">
                                    <div class="flex-1 bg-slate-100 rounded-full h-1.5 overflow-hidden">
                                        <div class="bg-emerald-500 h-full rounded-full progress-fill"
                                             style="width: @item.PorcentajeDelTotal.ToString("0")%"></div>
                                    </div>
                                    <span class="text-[11px] font-black text-emerald-600 w-12 text-right">@item.PorcentajeDelTotal.ToString("N1")%</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // Asegurar scroll suave al cargar resultados
    document.getElementById('reporteResultadoContenedor').scrollIntoView({ behavior: 'smooth', block: 'start' });
</script>