@model IEnumerable<AROCONSTRUCCIONES.Dtos.MovimientoInventarioDto>
@using AROCONSTRUCCIONES.Dtos

@{
    var saldo = ViewData["Saldo"] as InventarioDto;
}

@if (saldo != null)
{
    <div class="p-4 mb-4 border border-gray-200 rounded-lg bg-slate-50">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <small class="text-sm text-slate-500">Material</small>
                <h5 class="text-base font-semibold text-slate-900">@saldo.MaterialNombre (@saldo.MaterialCodigo)</h5>
            </div>
            <div>
                <small class="text-sm text-slate-500">Almacén</small>
                <h5 class="text-base font-semibold text-slate-900">@saldo.AlmacenUbicacion</h5>
            </div>
            <div class="text-left md:text-right">
                <small class="text-sm text-slate-500">Stock Actual</small>
                <h5 class="text-base font-bold text-green-600">@saldo.StockActual.ToString("N0")</h5>
            </div>
            <div class="text-left md:text-right">
                <small class="text-sm text-slate-500">Valorizado</small>
                <h5 class="text-base font-bold text-slate-900">@saldo.ValorTotal.ToString("C2")</h5>
            </div>
        </div>
    </div>
}

<div class="overflow-x-auto bg-white rounded-lg shadow">
    <table class="min-w-full divide-y divide-gray-200" id="tablaKardexReporte">
        <thead class="bg-slate-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Fecha y Hora</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Tipo</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Cantidad</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Costo Unit.</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Stock Final</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Documento</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Motivo</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Responsable</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (Model != null && Model.Any())
            {
                @foreach (var mov in Model)
                {
                    bool esEntrada = mov.TipoMovimiento == "INGRESO";
                    var tipoClaseText = esEntrada ? "text-green-600" : "text-red-600";
                    var signoCantidad = esEntrada ? "+" : "-";

                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@mov.FechaMovimiento.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium @tipoClaseText">@mov.TipoMovimiento</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                            <span class="font-medium @tipoClaseText">
                                @signoCantidad@mov.Cantidad.ToString("N0")
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 text-right">@mov.CostoUnitarioMovimiento.ToString("C4")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900 font-bold text-right">@mov.StockFinal.ToString("N0")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@mov.NroFacturaGuia</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@mov.Motivo</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@mov.ResponsableNombre</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="px-6 py-4 text-center text-slate-500">No se encontraron movimientos para esta selección.</td>
                </tr>
            }
        </tbody>
    </table>
</div>