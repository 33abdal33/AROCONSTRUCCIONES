@model IEnumerable<AROCONSTRUCCIONES.Dtos.RequerimientoListDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="bg-white rounded-lg shadow-md">
    <div class="p-4 md:p-6">
        <div class="flex flex-col md:flex-row justify-between items-center mb-4">
            <h3 class="text-xl font-semibold text-slate-700">
                <i class="fas fa-dolly mr-2 text-amber-600"></i>
                Atención de Pedidos (Salidas a Obra)
            </h3>
            <span class="text-xs text-slate-500">Muestra requerimientos aprobados con saldo pendiente en almacén</span>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200" id="dataTableReqPendientesDespacho">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Código</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Proyecto / Obra</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Fecha Solicitud</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Prioridad</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-slate-500 uppercase">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var req in Model)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-blue-600">@req.Codigo</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">
                                    <div class="font-medium">@req.ProyectoNombre</div>
                                    <div class="text-xs text-slate-400">Solicitante: @req.Solicitante</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@req.Fecha.ToString("dd/MM/yyyy")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    @if (req.Prioridad == "Urgente")
                                    {
                                        <span class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-700 font-bold">URGENTE</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-700">Normal</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium space-x-2">
                                    <button type="button" class="inline-flex items-center px-3 py-1.5 bg-amber-600 text-white rounded-md hover:bg-amber-700 transition-colors btn-despachar"
                                            title="Atender Pedido de Almacén"
                                            onclick="cargarModalDespacho(@req.Id)">
                                        <i class="fas fa-boxes mr-2"></i>
                                        Despachar
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-6 py-10 text-center text-slate-400 italic">
                                No hay pedidos pendientes de despacho para las obras.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Script para asegurar que el modal se pueda cerrar *@
<script>
    $(document).ready(function () {
        // Delegación de evento: Escucha el clic en botones con x-on:click="open = false"
        // o cualquier botón que sea para cerrar/cancelar dentro del placeholder
        $(document).off('click', '[x-on\\:click="open = false"], .btn-cerrar-modal').on('click', '[x-on\\:click="open = false"], .btn-cerrar-modal', function () {
            // Buscamos el contenedor del modal y lo removemos/ocultamos
            const $modalElement = $(this).closest('.fixed');

            $modalElement.fadeOut(200, function() {
                $(this).remove();
                // Limpiamos el placeholder por si acaso
                $('#modal-placeholder').empty();
            });
        });

        // También cerrar al presionar ESC
        $(document).on('keydown', function(event) {
            if (event.key === "Escape") {
                $('.fixed').fadeOut(200, function() {
                    $(this).remove();
                    $('#modal-placeholder').empty();
                });
            }
        });
    });
</script>