@model IEnumerable<AROCONSTRUCCIONES.Dtos.RequerimientoListDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    #dataTableReqPendientesDespacho {
        border-bottom: none !important;
    }

        #dataTableReqPendientesDespacho thead th {
            border-bottom: none !important;
        }

        #dataTableReqPendientesDespacho tbody tr:last-child td {
            border-bottom: none !important;
        }
</style>

<div class="bg-white rounded-[2.5rem] border border-slate-200 shadow-xl shadow-slate-200/50 overflow-hidden animate-in fade-in slide-in-from-bottom-4 duration-500">
    <div class="p-8 md:p-10">

        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-amber-500 rounded-2xl flex items-center justify-center shadow-lg shadow-amber-100">
                    <i class="fas fa-shipping-fast text-white text-lg"></i>
                </div>
                <div>
                    <h3 class="text-2xl font-black text-slate-800 tracking-tight">Atención de Pedidos</h3>
                    <p class="text-sm font-medium text-slate-500">Cola de despacho: Salida de insumos hacia frentes de obra.</p>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="px-4 py-1.5 bg-amber-50 text-amber-600 rounded-full text-[10px] font-black uppercase tracking-widest border border-amber-100 animate-pulse">
                    @Model.Count() Guías por Procesar
                </div>
            }
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-100" id="dataTableReqPendientesDespacho">
                <thead class="bg-slate-50/50">
                    <tr>
                        <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider">Código / Fecha</th>
                        <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider">Proyecto / Destino</th>
                        <th class="px-6 py-4 text-center text-[11px] font-bold text-slate-400 uppercase tracking-wider">Prioridad</th>
                        <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider">Solicitante</th>
                        <th class="px-6 py-4 text-center text-[11px] font-bold text-slate-400 uppercase tracking-wider">Acción</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50 bg-white">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var req in Model)
                        {
                            <tr class="hover:bg-slate-50 transition-all group">
                                <td class="px-6 py-5 whitespace-nowrap">
                                    <div class="text-sm font-mono font-black text-indigo-600 tracking-tight">@req.Codigo</div>
                                    <div class="text-[10px] font-bold text-slate-400 uppercase mt-0.5">Emitido: @req.Fecha.ToString("dd/MM/yyyy")</div>
                                </td>
                                <td class="px-6 py-5">
                                    <div class="text-sm font-black text-slate-800 uppercase tracking-tight group-hover:text-indigo-600 transition-colors">@req.ProyectoNombre</div>
                                    <div class="flex items-center gap-1.5 mt-0.5">
                                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-500"></span>
                                        <span class="text-[10px] font-bold text-slate-400 uppercase tracking-tighter">Despacho Autorizado</span>
                                    </div>
                                </td>
                                <td class="px-6 py-5 text-center">
                                    @if (req.Prioridad == "Urgente")
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-[9px] font-black uppercase bg-rose-100 text-rose-600 border border-rose-200">
                                            <i class="fas fa-exclamation-triangle mr-1.5"></i> CRÍTICO
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-[9px] font-black uppercase bg-slate-100 text-slate-500 border border-slate-200">
                                            NORMAL
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-5">
                                    <div class="flex items-center gap-2">
                                        <div class="w-7 h-7 rounded-full bg-indigo-50 flex items-center justify-center text-[10px] font-bold text-indigo-500 border border-indigo-100">
                                            @(string.IsNullOrEmpty(req.Solicitante) ? "?" : req.Solicitante.Substring(0, 1).ToUpper())
                                        </div>
                                        <span class="text-sm font-bold text-slate-600">@req.Solicitante</span>
                                    </div>
                                </td>
                                <td class="px-6 py-5 text-center">
                                    <button type="button"
                                            class="inline-flex items-center px-5 py-2.5 bg-amber-500 hover:bg-amber-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl shadow-lg shadow-amber-200 transition-all hover:scale-105 active:scale-95"
                                            onclick="cargarModalDespacho(@req.Id)">
                                        <i class="fas fa-truck-loading mr-2 text-sm"></i>
                                        Despachar
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-6 py-20 text-center">
                                <div class="flex flex-col items-center opacity-20">
                                    <i class="fas fa-clipboard-check text-6xl mb-4"></i>
                                    <p class="text-sm font-black uppercase tracking-[0.2em] text-slate-500">Sin órdenes de salida pendientes</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Script para asegurar que el modal se pueda cerrar *@
<script>
    $(document).ready(function () {
        // Delegación de evento: Escucha el clic en botones con x-on:click="open = false"
        // o cualquier botón que sea para cerrar/cancelar dentro del placeholder
        $(document).off('click', '[x-on\\:click="open = false"], .btn-cerrar-modal').on('click', '[x-on\\:click="open = false"], .btn-cerrar-modal', function () {
            // Buscamos el contenedor del modal y lo removemos/ocultamos
            const $modalElement = $(this).closest('.fixed');

            $modalElement.fadeOut(200, function() {
                $(this).remove();
                // Limpiamos el placeholder por si acaso
                $('#modal-placeholder').empty();
            });
        });

        // También cerrar al presionar ESC
        $(document).on('keydown', function(event) {
            if (event.key === "Escape") {
                $('.fixed').fadeOut(200, function() {
                    $(this).remove();
                    $('#modal-placeholder').empty();
                });
            }
        });
    });
</script>