@model IEnumerable<AROCONSTRUCCIONES.Dtos.RequerimientoListDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="bg-white rounded-lg shadow-md">
    <div class="p-4 md:p-6">

        <div class="flex flex-col md:flex-row justify-between items-center mb-4">
            <h3 class="text-xl font-semibold text-slate-700">
                <i class="fas fa-check-double mr-2 text-green-600"></i>
                Requerimientos Aprobados (Listos para Comprar)
            </h3>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200" id="dataTableReqAprobados">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Código Req.</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Proyecto</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Fecha</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Solicitante</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-slate-500 uppercase">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var req in Model)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">@req.Codigo</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-600">@req.ProyectoNombre</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@req.Fecha.ToString("dd/MM/yyyy")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@req.Solicitante</td>
                                <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium space-x-2">

                                    <button type="button" class="p-1 text-slate-500 hover:text-blue-700" title="Ver Detalles"
                                            data-modal-url="@Url.Action("Details", "Requerimiento", new { id = req.Id })">
                                        <i class="fas fa-eye"></i>
                                    </button>

                                    <button type="button" class="p-1 text-green-500 hover:text-green-700" title="Generar Orden de Compra"
                                            data-modal-url="@Url.Action("CargarFormularioOCDesdeRequerimiento", "OrdenCompra", new { id = req.Id })">
                                        <i class="fas fa-shopping-cart"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-6 py-4 text-center text-slate-500">
                                No hay requerimientos aprobados pendientes de compra.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>