@model AROCONSTRUCCIONES.Models.Requerimiento

<div x-data="{ open: true }"
     x-show="open"
     x-cloak
     class="fixed inset-0 z-50 overflow-y-auto"
     id="modal-despacho-container">

    @* Fondo oscuro con desenfoque *@
    <div class="fixed inset-0 bg-slate-900 bg-opacity-60 backdrop-blur-sm transition-opacity"></div>

    <div class="flex items-center justify-center min-h-screen p-4">

        <div @@click.away="open = false"
             class="relative bg-white rounded-xl shadow-2xl max-w-5xl w-full overflow-hidden border border-slate-200 transform transition-all">

            @* Cabecera *@
            <div class="bg-slate-50 px-6 py-4 border-b border-slate-200 flex justify-between items-center">
                <div>
                    <h3 class="text-lg font-bold text-slate-800">
                        <i class="fas fa-boxes mr-2 text-blue-600"></i>
                        Despacho de Materiales: <span class="text-blue-700">@Model.Codigo</span>
                    </h3>
                    <p class="text-xs text-slate-500">Proyecto: <strong>@Model.Proyecto?.NombreProyecto</strong></p>
                </div>
                <button @@click="open = false" class="text-slate-400 hover:text-slate-600 btn-cerrar-modal p-2">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>

            <form id="formDespachoMasivo" method="post" asp-controller="Inventario" asp-action="ProcesarDespacho">
                @Html.AntiForgeryToken()
                <input type="hidden" name="RequerimientoId" value="@Model.Id" />

                <div class="p-6">
                    @* Datos de Cabecera del Despacho *@
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6 bg-blue-50 p-4 rounded-lg border border-blue-100">
                        <div>
                            <label class="block text-[10px] font-black text-blue-700 uppercase tracking-widest">Almacén de Salida *</label>
                            <select name="AlmacenId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm text-sm focus:ring-blue-500 focus:border-blue-500" required>
                                <option value="">Seleccione Almacén...</option>
                                @if (ViewBag.Almacenes != null)
                                {
                                    @foreach (var item in (SelectList)ViewBag.Almacenes)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-[10px] font-black text-blue-700 uppercase tracking-widest">Referencia (Guía / Vale / Nro Documento) *</label>
                            <input type="text" name="NroFacturaGuia" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm text-sm" placeholder="Ej: VALE-SALIDA-001" required />
                        </div>
                    </div>

                    @* Tabla de Materiales *@
                    <div class="overflow-x-auto border border-slate-200 rounded-lg shadow-sm">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-slate-800">
                                <tr>
                                    <th class="px-4 py-3 text-left text-[10px] font-bold text-white uppercase tracking-wider">Material</th>
                                    <th class="px-4 py-3 text-right text-[10px] font-bold text-white uppercase tracking-wider">Total Solicitado</th>
                                    <th class="px-4 py-3 text-right text-[10px] font-bold text-white uppercase tracking-wider">Ya Entregado</th>
                                    <th class="px-4 py-3 text-right text-[10px] font-bold text-blue-300 uppercase tracking-wider">Pendiente</th>
                                    <th class="px-4 py-3 text-center text-[10px] font-bold text-amber-400 uppercase tracking-wider w-40">Despachar Ahora</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100 bg-white">
                                @{
                                    var detallesPendientes = Model.Detalles.Where(d => d.CantidadAtendida < d.CantidadSolicitada).ToList();
                                }

                                @if (detallesPendientes.Any())
                                {
                                    @foreach (var det in detallesPendientes)
                                    {
                                        <tr class="hover:bg-slate-50 transition-colors">
                                            <td class="px-4 py-3">
                                                <div class="text-sm font-bold text-slate-800">@det.Material?.Nombre</div>
                                                <div class="text-[10px] text-slate-400 font-mono">CÓD: @det.Material?.Codigo</div>
                                            </td>
                                            <td class="px-4 py-3 text-right text-sm text-slate-600 font-medium">@det.CantidadSolicitada.ToString("N2")</td>
                                            <td class="px-4 py-3 text-right text-sm text-slate-500">@det.CantidadAtendida.ToString("N2")</td>
                                            <td class="px-4 py-3 text-right text-sm font-black text-blue-600">
                                                @((det.CantidadSolicitada - det.CantidadAtendida).ToString("N2"))
                                            </td>
                                            <td class="px-4 py-3 bg-amber-50/30">
                                                <input type="hidden" name="items.Index" value="@det.Id" />
                                                <input type="hidden" name="items[@det.Id].MaterialId" value="@det.IdMaterial" />
                                                <input type="hidden" name="items[@det.Id].DetalleRequerimientoId" value="@det.Id" />
                                                <input type="number" name="items[@det.Id].CantidadADespachar"
                                                       class="w-full text-right border-amber-300 rounded-md shadow-sm focus:ring-amber-500 focus:border-amber-500 sm:text-sm font-black text-amber-700"
                                                       max="@(det.CantidadSolicitada - det.CantidadAtendida)"
                                                       min="0" step="any" value="0"
                                                       onfocus="if(this.value=='0') this.value='';" onblur="if(this.value=='') this.value='0';" />
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="px-4 py-12 text-center bg-gray-50">
                                            <div class="flex flex-col items-center">
                                                <i class="fas fa-check-circle text-green-500 text-5xl mb-4"></i>
                                                <p class="text-slate-700 font-bold text-lg">¡Requerimiento Completado!</p>
                                                <p class="text-slate-500 text-sm">No existen materiales pendientes por despachar en este pedido.</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @* Pie del Modal *@
                <div class="bg-slate-50 px-8 py-4 border-t border-slate-200 flex justify-end gap-3">
                    <button type="button" @@click="open = false" class="px-6 py-2 text-sm font-bold text-slate-500 hover:text-slate-800 transition-colors btn-cerrar-modal">
                        CANCELAR
                    </button>
                    @if (detallesPendientes.Any())
                    {
                        <button type="submit" class="px-8 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-black shadow-lg transition-all flex items-center transform hover:scale-105">
                            <i class="fas fa-truck-loading mr-2"></i>
                            CONFIRMAR SALIDA
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>