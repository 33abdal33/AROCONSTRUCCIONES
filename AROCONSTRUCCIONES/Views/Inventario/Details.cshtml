@model IEnumerable<AROCONSTRUCCIONES.Dtos.MovimientoInventarioDto>
@using AROCONSTRUCCIONES.Dtos
@{
    var saldo = ViewData["Saldo"] as InventarioDto;
    ViewData["Title"] = $"Kárdex - {saldo?.MaterialNombre}";
}

<div class="p-6 space-y-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
            <h3 class="text-2xl font-bold text-gray-900 tracking-tight">
                <i class="fas fa-history mr-3 text-blue-600"></i>
                Kárdex de Material
            </h3>
            <p class="text-sm text-gray-500">Historial detallado de entradas y salidas del inventario.</p>
        </div>
        <a asp-action="Index" asp-controller="Inventario"
           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 shadow-sm transition-all">
            <i class="fas fa-arrow-left mr-2"></i>
            Volver al Inventario
        </a>
    </div>

    @if (saldo != null)
    {
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="bg-white p-5 rounded-xl border border-gray-200 shadow-sm">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Material</p>
                <h4 class="text-lg font-bold text-gray-900 mt-1">@saldo.MaterialNombre</h4>
                <p class="text-xs font-mono text-blue-600 mt-1">@saldo.MaterialCodigo</p>
            </div>

            <div class="bg-white p-5 rounded-xl border border-gray-200 shadow-sm">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Almacén / Obra</p>
                <h4 class="text-lg font-semibold text-gray-800 mt-1">@saldo.AlmacenNombre</h4>
                <p class="text-xs text-gray-500 mt-1">@saldo.AlmacenUbicacion</p>
            </div>

            <div class="bg-white p-5 rounded-xl border border-gray-200 shadow-sm">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Stock Actual</p>
                <div class="flex items-baseline gap-2 mt-1">
                    <span class="text-3xl font-bold text-green-600">@saldo.StockActual.ToString("N2")</span>
                    <span class="text-sm text-gray-500 font-medium">@saldo.MaterialUnidadMedida</span>
                </div>
            </div>

            <div class="bg-white p-5 rounded-xl border border-gray-200 shadow-sm">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Inversión Total</p>
                <h4 class="text-2xl font-bold text-gray-900 mt-1">S/ @saldo.ValorTotal.ToString("N2")</h4>
                <p class="text-xs text-gray-400 mt-1">Promedio: S/ @saldo.CostoPromedio.ToString("N2")</p>
            </div>
        </div>
    }

    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse" id="tablaKardex">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-4 py-3 text-xs font-semibold text-gray-500 uppercase">Fecha</th>
                        <th class="px-4 py-3 text-xs font-semibold text-gray-500 uppercase">Tipo</th>
                        <th class="px-4 py-3 text-xs font-semibold text-gray-500 uppercase text-right">Cantidad</th>
                        <th class="px-4 py-3 text-xs font-semibold text-gray-500 uppercase text-right">Costo Unit.</th>
                        <th class="px-4 py-3 text-xs font-semibold text-gray-500 uppercase text-right bg-blue-50/50">Stock Final</th>
                        <th class="px-4 py-3 text-xs font-semibold text-gray-500 uppercase">Documento / Motivo</th>
                        <th class="px-4 py-3 text-xs font-semibold text-gray-500 uppercase">Responsable</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var mov in Model)
                        {
                            bool esEntrada = mov.TipoMovimiento == "INGRESO";
                            var colorClase = esEntrada ? "text-green-600" : "text-red-600";
                            var badgeClase = esEntrada ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700";
                            var icono = esEntrada ? "fa-arrow-trend-up" : "fa-arrow-trend-down";

                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-4 py-4 text-sm text-gray-600">
                                    <div class="font-medium">@mov.FechaMovimiento.ToString("dd/MM/yyyy")</div>
                                    <div class="text-xs text-gray-400">@mov.FechaMovimiento.ToString("HH:mm")</div>
                                </td>
                                <td class="px-4 py-4">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold @badgeClase uppercase">
                                        <i class="fas @icono mr-1.5"></i>
                                        @(esEntrada ? "Entrada" : "Salida")
                                    </span>
                                </td>
                                <td class="px-4 py-4 text-right">
                                    <span class="text-sm font-bold @colorClase">
                                        @(esEntrada ? "+" : "-")@mov.Cantidad.ToString("N2")
                                    </span>
                                    <span class="text-[10px] text-gray-400 block uppercase">@mov.UnidadMedida</span>
                                </td>
                                <td class="px-4 py-4 text-right text-sm text-gray-600">
                                    S/ @mov.CostoUnitarioMovimiento.ToString("N2")
                                </td>
                                <td class="px-4 py-4 text-right bg-blue-50/30">
                                    <span class="text-sm font-extrabold text-blue-900">@mov.StockFinal.ToString("N2")</span>
                                </td>
                                <td class="px-4 py-4">
                                    <div class="text-sm font-medium text-gray-800">@mov.NroFacturaGuia</div>
                                    <div class="text-xs text-gray-500 truncate max-w-[200px]" title="@mov.Motivo">@mov.Motivo</div>
                                </td>
                                <td class="px-4 py-4">
                                    <div class="flex items-center">
                                        <div class="h-7 w-7 rounded-full bg-gray-100 flex items-center justify-center mr-2">
                                            <i class="fas fa-user text-[10px] text-gray-400"></i>
                                        </div>
                                        <span class="text-xs font-medium text-gray-600">@mov.ResponsableNombre</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="px-4 py-12 text-center text-gray-400 italic">
                                <i class="fas fa-box-open text-3xl mb-3 block opacity-20"></i>
                                No se encontraron movimientos registrados para este material.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar DataTables con estilo minimalista
            $('#tablaKardex').DataTable({
                language: { url: "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json" },
                pageLength: 10,
                order: [[0, "desc"]],
                dom: '<"p-4 flex justify-between items-center"f>t<"p-4 flex justify-between items-center"ip>',
                drawCallback: function() {
                    $('.dataTables_paginate .paginate_button').addClass('px-3 py-1 border rounded mx-1 text-sm');
                }
            });
        });
    </script>
}