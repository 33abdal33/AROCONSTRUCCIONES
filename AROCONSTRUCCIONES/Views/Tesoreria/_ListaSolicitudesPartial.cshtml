@model IEnumerable<AROCONSTRUCCIONES.Models.SolicitudPago>

<div class="bg-white rounded-lg shadow-md">
    <div class="p-4 md:p-6">
        <h3 class="text-lg font-semibold text-slate-700 mb-4">Bandeja de Solicitudes</h3>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200" id="dataTableTesoreria">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Código SP</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Fecha</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Proyecto</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Beneficiario</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase">Importe (S/)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Estado</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-slate-500 uppercase">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        string estadoClass = item.Estado == "Pendiente" ? "bg-yellow-100 text-yellow-800" :
                        item.Estado == "Pagado" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800";

                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-slate-900">@item.Codigo</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@item.FechaSolicitud.ToString("dd/MM/yyyy")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">@item.Proyecto.NombreProyecto</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">@item.BeneficiarioNombre</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-slate-900 text-right">@item.MontoNetoAPagar.ToString("N2")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @estadoClass">
                                    @item.Estado
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium space-x-2">

                                <a href="@Url.Action("DescargarPdf", "Tesoreria", new { id = item.Id })"
                                   target="_blank"
                                   class="text-slate-400 hover:text-red-600 transition-colors"
                                   title="Ver PDF SP">
                                    <i class="fas fa-file-pdf fa-lg"></i>
                                </a>

                                @if (item.Estado == "Pendiente")
                                {
                                    <button type="button"
                                            class="text-slate-400 hover:text-green-600 transition-colors"
                                            title="Registrar Pago"
                                            data-modal-url="@Url.Action("GetModalPago", "Tesoreria", new { id = item.Id, codigo = item.Codigo, monto = item.MontoNetoAPagar })">
                                        <i class="fas fa-money-bill-wave fa-lg"></i>
                                    </button>
                                }
                                else if (item.Estado == "Pagado")
                                {
                                    <span class="text-green-600" title="Pagado el @item.FechaPago?.ToShortDateString()">
                                        <i class="fas fa-check-double"></i>
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>