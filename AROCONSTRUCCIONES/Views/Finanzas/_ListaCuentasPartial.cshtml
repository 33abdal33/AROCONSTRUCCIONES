@model IEnumerable<AROCONSTRUCCIONES.Dtos.CuentaBancariaDto>

<div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold text-slate-700">Cuentas Bancarias y Cajas</h3>
        <button type="button" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm"
                data-modal-url="@Url.Action("GetCuentaParaEditar", "Finanzas", new { id = 0 })">
            <i class="fas fa-plus mr-2"></i> Nueva Cuenta
        </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var item in Model)
        {
            <div class="border rounded-lg p-4 bg-slate-50 hover:shadow-md transition-shadow relative">
                <div class="flex justify-between items-start">
                    <div>
                        <h4 class="font-bold text-slate-800">@item.BancoNombre</h4>
                        <p class="text-sm text-slate-500">@item.NumeroCuenta</p>
                        <span class="text-xs text-slate-400">@item.Moneda</span>
                    </div>
                    <div class="text-right">
                        <p class="text-lg font-bold @(item.SaldoActual >= 0 ? "text-green-600" : "text-red-600")">
                            @item.SaldoActual.ToString("N2")
                        </p>
                        <p class="text-xs text-slate-500">Saldo Actual</p>
                    </div>
                </div>
                <hr class="my-3" />
                <div class="flex justify-between items-center">
                    <span class="px-2 py-1 text-xs rounded-full @(item.Activo ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                        @(item.Activo ? "Activo" : "Inactivo")
                    </span>
                    <button class="text-blue-600 hover:text-blue-800 text-sm"
                            data-modal-url="@Url.Action("GetCuentaParaEditar", "Finanzas", new { id = item.Id })">
                        <i class="fas fa-edit"></i> Editar
                    </button>
                </div>
            </div>
        }
        @if (!Model.Any())
        {
            <div class="col-span-3 text-center py-10 text-slate-500">
                No hay cuentas bancarias registradas.
            </div>
        }
    </div>
</div>