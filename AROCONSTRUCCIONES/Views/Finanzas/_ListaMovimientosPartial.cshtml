@model IEnumerable<AROCONSTRUCCIONES.Dtos.MovimientoBancarioDto>

<div class="bg-white rounded-lg shadow overflow-hidden border border-slate-200">
    <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase">Fecha</th>
                <th class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase">Banco / Cuenta</th>
                <th class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase">Descripción</th>
                <th class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase">Operación</th>
                <th class="px-6 py-3 text-right text-xs font-bold text-slate-500 uppercase">Ingreso</th>
                <th class="px-6 py-3 text-right text-xs font-bold text-slate-500 uppercase">Egreso</th>
                <th class="px-6 py-3 text-right text-xs font-bold text-slate-500 uppercase">Saldo</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-slate-200 bg-white">
            @if (!Model.Any())
            {
                <tr><td colspan="7" class="px-6 py-10 text-center text-slate-500">No se encontraron movimientos en este periodo.</td></tr>
            }

            @foreach (var item in Model)
            {
                bool esIngreso = item.TipoMovimiento == "INGRESO";

                <tr class="hover:bg-slate-50 transition">
                    <td class="px-6 py-3 whitespace-nowrap text-sm text-slate-600">
                        @item.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td class="px-6 py-3 text-sm text-slate-700">
                        <div class="font-medium">@item.BancoNombre</div>
                        <div class="text-xs text-slate-500">@item.Moneda</div>
                    </td>
                    <td class="px-6 py-3 text-sm text-slate-600 max-w-xs truncate" title="@item.Descripcion">
                        @item.Descripcion
                    </td>
                    <td class="px-6 py-3 whitespace-nowrap text-sm text-slate-500 font-mono">
                        @item.NumeroOperacion
                    </td>

                    <td class="px-6 py-3 whitespace-nowrap text-right text-sm font-bold text-green-600">
                        @(esIngreso? item.Monto.ToString("N2") : "-")
                    </td>

                    <td class="px-6 py-3 whitespace-nowrap text-right text-sm font-bold text-red-600">
                        @(!esIngreso ? item.Monto.ToString("N2") : "-")
                    </td>

                    <td class="px-6 py-3 whitespace-nowrap text-right text-sm font-bold text-slate-800 bg-slate-50">
                        @item.SaldoDespues.ToString("N2")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>