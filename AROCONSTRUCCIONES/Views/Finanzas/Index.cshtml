@{
    ViewData["Title"] = "Finanzas y Bancos";
}

<div class="mb-6">
    <h2 class="text-2xl font-semibold text-slate-800">Módulo de Finanzas</h2>
    <p class="text-slate-500">Gestión de Cajas, Bancos y Cuentas por Pagar</p>
</div>

<div x-data="{ activeTab: 'bancos' }" class="w-full mt-6">
    <div class="flex space-x-2 border-b border-gray-200">
        <button x-on:click="activeTab = 'bancos'; loadTabContent('@Url.Action("ListaCuentasPartial", "Finanzas")', '#finanzas-content')"
                :class="{ 'border-blue-600 text-blue-600': activeTab === 'bancos', 'border-transparent text-gray-500': activeTab !== 'bancos' }"
                class="py-2 px-4 font-medium border-b-2 transition-colors"
                data-tab-url="@Url.Action("ListaCuentasPartial", "Finanzas")">
            <i class="fas fa-university mr-2"></i> Caja y Bancos
        </button>
        <button x-on:click="activeTab = 'movimientos'; loadTabContent('@Url.Action("MovimientosIndex", "Finanzas")', '#finanzas-content')"
                :class="{ 'border-blue-600 text-blue-600': activeTab === 'movimientos', 'border-transparent text-gray-500': activeTab !== 'movimientos' }"
                class="py-2 px-4 font-medium border-b-2 transition-colors">
            <i class="fas fa-exchange-alt mr-2"></i> Movimientos Bancarios
        </button>
    </div>

    <div id="finanzas-content" class="mt-6">
    </div>
    <div id="modal-placeholder"></div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/logistica-tabs.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            loadTabContent('@Url.Action("ListaCuentasPartial", "Finanzas")', '#finanzas-content');
        });
    </script>
}