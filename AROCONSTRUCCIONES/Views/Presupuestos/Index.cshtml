@{
    ViewData["Title"] = "Presupuesto de Obra";
    var proyectos = ViewBag.Proyectos as SelectList;
}

<div class="pt-4">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-2xl font-semibold text-slate-800">Presupuesto de Obra</h2>
            <p class="text-slate-500">Gestión de partidas, metrados y análisis de precios.</p>
        </div>

        <div class="flex gap-2">
            <button type="button" id="btnImportarExcel" class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 font-medium shadow-sm flex items-center" disabled>
                <i class="fas fa-file-excel mr-2"></i> Importar S10 / Excel
            </button>
        </div>
    </div>

    <div class="bg-white p-4 rounded-lg shadow-sm border border-slate-200 mb-6">
        <div class="w-full md:w-1/3">
            <label class="block text-sm font-medium text-slate-700 mb-1">Seleccionar Proyecto</label>
            <select id="selectProyectoPresupuesto" class="form-select w-full border-slate-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500" asp-items="proyectos">
                <option value="0">-- Seleccione un Proyecto --</option>
            </select>
        </div>
    </div>

    <div id="contenedorPartidas">
        <div class="text-center text-slate-400 py-16 border-2 border-dashed border-slate-300 rounded-lg bg-slate-50">
            <i class="fas fa-search text-4xl mb-3 opacity-50"></i>
            <p class="text-lg">Seleccione un proyecto para ver o cargar su presupuesto.</p>
        </div>
    </div>
</div>

<div id="modalImportar" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
    <div class="flex items-center justify-center min-h-screen p-4 text-center sm:p-0">
        <div class="relative bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:max-w-lg sm:w-full">

            <form id="formImportarExcel" enctype="multipart/form-data">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                        <i class="fas fa-upload mr-2 text-blue-500"></i> Importar Presupuesto
                    </h3>
                    <div class="mt-2">
                        <p class="text-sm text-gray-500 mb-4">
                            Sube tu archivo Excel con las columnas: <strong>Item, Descripción, Unidad, Metrado, Precio</strong>.
                            <br><span class="text-red-500 text-xs">* Esto reemplazará cualquier presupuesto existente para este proyecto.</span>
                        </p>

                        <input type="hidden" id="importProyectoId" name="proyectoId" />

                        <label class="block text-sm font-medium text-gray-700 mb-1">Archivo Excel (.xlsx)</label>
                        <input type="file" name="archivoExcel" accept=".xlsx, .xls" class="block w-full text-sm text-slate-500
                            file:mr-4 file:py-2 file:px-4
                            file:rounded-full file:border-0
                            file:text-sm file:font-semibold
                            file:bg-blue-50 file:text-blue-700
                            hover:file:bg-blue-100" required />
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm">
                        Procesar Archivo
                    </button>
                    <button type="button" id="btnCerrarModal" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                        Cancelar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const $select = $('#selectProyectoPresupuesto');
            const $contenedor = $('#contenedorPartidas');
            const $btnImportar = $('#btnImportarExcel');
            const $modal = $('#modalImportar');
            const $formImportar = $('#formImportarExcel');

            // 1. Cambio de Proyecto
            $select.on('change', function() {
                const proyectoId = $(this).val();
                if (proyectoId > 0) {
                    $btnImportar.prop('disabled', false);
                    cargarPartidas(proyectoId);
                } else {
                    $btnImportar.prop('disabled', true);
                    $contenedor.html('<div class="text-center text-slate-400 py-16 bg-slate-50 rounded border border-dashed"><p>Seleccione un proyecto.</p></div>');
                }
            });

            function cargarPartidas(id) {
                $contenedor.html('<div class="text-center p-10"><i class="fas fa-spinner fa-spin text-blue-600 text-2xl"></i> Cargando presupuesto...</div>');
                $.get('@Url.Action("ListaPartidasPartial", "Presupuestos")', { proyectoId: id }, function(html) {
                    $contenedor.html(html);
                });
            }

            // 2. Lógica del Modal
            $btnImportar.on('click', function() {
                $('#importProyectoId').val($select.val());
                $modal.removeClass('hidden');
            });

            $('#btnCerrarModal').on('click', function() {
                $modal.addClass('hidden');
                $formImportar[0].reset();
            });

            // 3. Enviar Archivo (AJAX)
            $formImportar.on('submit', function(e) {
                e.preventDefault();

                var formData = new FormData(this);
                const $btnSubmit = $(this).find('button[type="submit"]');
                $btnSubmit.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Subiendo...');

                $.ajax({
                    url: '@Url.Action("ImportarExcel", "Presupuestos")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(res) {
                        if (res.success) {
                            Swal.fire('¡Importado!', res.message, 'success');
                            $modal.addClass('hidden');
                            cargarPartidas($select.val()); // Recargar tabla
                        } else {
                            Swal.fire('Error', res.message, 'error');
                        }
                    },
                    error: function() {
                        Swal.fire('Error', 'Falló la conexión con el servidor.', 'error');
                    },
                    complete: function() {
                        $btnSubmit.prop('disabled', false).text('Procesar Archivo');
                    }
                });
            });
        });
    </script>
}