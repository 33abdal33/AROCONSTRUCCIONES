<div class="pt-4">
    <div class="mb-4">
        <h3 class="text-xl font-semibold text-slate-700">
            <i class="fas fa-file-invoice-dollar mr-2 text-green-600"></i>
            Generación de Planillas
        </h3>
        <p class="text-sm text-slate-500">Seleccione el proyecto y la semana para calcular los pagos.</p>
    </div>

    <div class="bg-white p-4 rounded-lg shadow-sm border border-slate-200 mb-6">
        <form id="formCalculoPlanilla" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
            <div class="md:col-span-2">
                <label class="block text-xs font-bold text-slate-500 uppercase">Proyecto</label>
                <select id="planProyId" name="proyectoId" class="form-select w-full border-slate-300 rounded-md" asp-items="ViewBag.Proyectos">
                    <option value="">-- Seleccione --</option>
                </select>
            </div>
            <div>
                <label class="block text-xs font-bold text-slate-500 uppercase">Fecha Inicio</label>
                <input type="date" id="planFecIni" name="fechaInicio" class="form-input w-full border-slate-300 rounded-md" />
            </div>
            <div>
                <label class="block text-xs font-bold text-slate-500 uppercase">Fecha Fin</label>
                <input type="date" id="planFecFin" name="fechaFin" class="form-input w-full border-slate-300 rounded-md" />
            </div>
        </form>
        <div class="mt-4 flex justify-end">
            <button type="button" id="btnCalcularPlanilla" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium">
                <i class="fas fa-calculator mr-2"></i> Calcular Pre-Planilla
            </button>
        </div>
    </div>

    <div id="contenedorPlanillaResult">
        <div class="text-center text-slate-400 py-10 border border-dashed rounded">
            Resultados del cálculo aparecerán aquí.
        </div>
    </div>
</div>

<script>
    $('#btnCalcularPlanilla').click(function() {
        var data = $('#formCalculoPlanilla').serialize();
        $('#contenedorPlanillaResult').html('<div class="text-center p-10"><i class="fas fa-spinner fa-spin text-2xl text-blue-600"></i> Procesando Tareos...</div>');

        $.get('@Url.Action("GenerarPrePlanilla", "RRHH")', data, function(response) {
            $('#contenedorPlanillaResult').html(response);
        });
    });
</script>