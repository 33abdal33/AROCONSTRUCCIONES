@model IEnumerable<AROCONSTRUCCIONES.Dtos.TrabajadorDto>

<div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold text-slate-700">Padrón de Obreros</h3>
        <button type="button" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm"
                data-modal-url="@Url.Action("GetTrabajadorParaEditar", "RRHH", new { id = 0 })">
            <i class="fas fa-user-plus mr-2"></i> Nuevo Trabajador
        </button>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200" id="dataTableTrabajadores">
            <thead class="bg-slate-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">DNI</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Nombre Completo</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Cargo</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Pensión</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-slate-500 uppercase">Estado</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-slate-500 uppercase">Acciones</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-slate-600">@item.NumeroDocumento</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">@item.NombreCompleto</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                            <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded">@item.CargoNombre</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">@item.SistemaPension</td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            @if (item.Estado)
                            {
                                <span class="text-green-600 text-xs font-bold"><i class="fas fa-check-circle"></i> Activo</span>
                            }
                            else
                            {
                                <span class="text-red-500 text-xs font-bold"><i class="fas fa-times-circle"></i> Cesado</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                            <button class="text-blue-600 hover:text-blue-900"
                                    data-modal-url="@Url.Action("GetTrabajadorParaEditar", "RRHH", new { id = item.Id })">
                                <i class="fas fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
