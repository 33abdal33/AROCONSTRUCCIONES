@model AROCONSTRUCCIONES.Dtos.TrabajadorDto

<div x-data="{ open: true }" x-show="open" class="fixed inset-0 z-50 overflow-y-auto" style="display: none;">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="relative bg-white rounded-lg shadow-xl max-w-2xl w-full">
            <form asp-action="GuardarTrabajador" asp-controller="RRHH" method="post" data-form-ajax="true">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="px-6 py-4 border-b border-gray-200 bg-slate-50 rounded-t-lg">
                    <h3 class="text-lg font-semibold text-slate-800">Ficha de Trabajador</h3>
                </div>

                <div class="p-6 space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <label asp-for="NumeroDocumento" class="block text-sm font-medium text-gray-700">DNI / C.E. *</label>
                            <input asp-for="NumeroDocumento" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm sm:text-sm" required />
                        </div>
                        <div>
                            <label asp-for="Nombres" class="block text-sm font-medium text-gray-700">Nombres *</label>
                            <input asp-for="Nombres" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm sm:text-sm" required />
                        </div>
                        <div>
                            <label asp-for="Apellidos" class="block text-sm font-medium text-gray-700">Apellidos *</label>
                            <input asp-for="Apellidos" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm sm:text-sm" required />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="CargoId" class="block text-sm font-medium text-gray-700">Cargo (Categoría) *</label>
                            <select asp-for="CargoId" asp-items="ViewBag.Cargos" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm sm:text-sm">
                                <option value="">Seleccione...</option>
                            </select>
                        </div>
                        <div>
                            <label asp-for="FechaIngreso" class="block text-sm font-medium text-gray-700">Fecha Ingreso</label>
                            <input asp-for="FechaIngreso" type="date" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm sm:text-sm" />
                        </div>
                    </div>

                    <hr />

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="SistemaPension" class="block text-sm font-medium text-gray-700">Régimen Pensionario *</label>
                            <select asp-for="SistemaPension" asp-items="ViewBag.Pensiones" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm sm:text-sm"></select>
                        </div>
                        <div>
                            <label asp-for="Cuspp" class="block text-sm font-medium text-gray-700">CUSPP (Afiliado)</label>
                            <input asp-for="Cuspp" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm sm:text-sm" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="Banco" class="block text-sm font-medium text-gray-700">Banco Pago</label>
                            <select asp-for="Banco" asp-items="ViewBag.Bancos" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm sm:text-sm">
                                <option value="">(Pago en efectivo)</option>
                            </select>
                        </div>
                        <div>
                            <label asp-for="NumeroCuenta" class="block text-sm font-medium text-gray-700">Nro. Cuenta</label>
                            <input asp-for="NumeroCuenta" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm sm:text-sm" />
                        </div>
                    </div>

                    <div class="flex items-center pt-2">
                        <input asp-for="Estado" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                        <label asp-for="Estado" class="ml-2 block text-sm text-gray-900">Trabajador Activo</label>
                    </div>
                </div>

                <div class="bg-gray-50 px-6 py-3 flex justify-end space-x-3 rounded-b-lg">
                    <button type="button" x-on:click="open = false" class="px-4 py-2 bg-white border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">Cancelar</button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Guardar Ficha</button>
                </div>
            </form>
        </div>
    </div>
</div>