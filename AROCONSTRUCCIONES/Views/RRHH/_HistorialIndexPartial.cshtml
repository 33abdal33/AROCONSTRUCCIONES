@{
    var proyectos = ViewBag.Proyectos as SelectList;
}

<div class="pt-4">
    <div class="mb-4">
        <h3 class="text-xl font-semibold text-slate-700">
            <i class="fas fa-history mr-2 text-blue-600"></i>
            Historial de Planillas y Boletas
        </h3>
        <p class="text-sm text-slate-500">Consulte planillas anteriores y descargue las boletas de pago.</p>
    </div>

    <div class="bg-white p-4 rounded-lg shadow-sm border border-slate-200 mb-6">
        <div class="flex flex-col md:flex-row gap-4 items-end">
            <div class="w-full md:w-1/2">
                <label class="block text-sm font-medium text-slate-700 mb-1">Seleccionar Proyecto</label>
                <select id="selectProyectoHistorial" class="form-select w-full border-slate-300 rounded-md" asp-items="proyectos">
                    <option value="0">-- Seleccione Proyecto --</option>
                </select>
            </div>
            <div>
                <button type="button" id="btnBuscarHistorial" class="px-4 py-2 bg-slate-100 text-slate-600 rounded-md hover:bg-slate-200 border border-slate-300">
                    <i class="fas fa-sync-alt mr-1"></i> Refrescar
                </button>
            </div>
        </div>
    </div>

    <div id="contenedorHistorialResult">
        <div class="text-center text-slate-400 py-10 border border-dashed rounded bg-slate-50">
            <i class="fas fa-arrow-up mb-2"></i>
            <p>Seleccione un proyecto para ver sus planillas procesadas.</p>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        const $select = $('#selectProyectoHistorial');
        const $contenedor = $('#contenedorHistorialResult');

        function cargarHistorial() {
            const proyectoId = $select.val();
            if (proyectoId > 0) {
                $contenedor.html('<div class="text-center p-10"><i class="fas fa-spinner fa-spin text-blue-600"></i> Cargando...</div>');

                $.get('@Url.Action("ListaHistorial", "RRHH")', { proyectoId: proyectoId }, function(html) {
                    $contenedor.html(html);
                });
            }
        }

        $select.on('change', cargarHistorial);
        $('#btnBuscarHistorial').on('click', cargarHistorial);
    });
</script>