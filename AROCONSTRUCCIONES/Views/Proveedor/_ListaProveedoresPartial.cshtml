@model IEnumerable<AROCONSTRUCCIONES.Dtos.ProveedorDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="pt-4">
    <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-semibold text-slate-700">
            <i class="fas fa-truck-moving mr-2 text-blue-600"></i>
            Maestro de Proveedores
        </h3>

        <button type="button"
                class="flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                data-modal-url="@Url.Action("GetProveedorParaEditar", "Proveedor", new { id = 0 })">
            <i class="fas fa-plus mr-2"></i> Nuevo Proveedor
        </button>
    </div>

    <partial name="_MensajesTempDataPartial" />

    <div class="overflow-x-auto bg-white rounded-lg shadow">
        <table class="min-w-full divide-y divide-gray-200" id="dataTableProveedores">
            <thead class="bg-slate-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-1000 uppercase tracking-wider">Razón Social</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-1000 uppercase tracking-wider" >RUC</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-1000 uppercase tracking-wider">Categoria</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-1000 uppercase tracking-wider">Teléfono</th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-slate-1000 uppercase tracking-wider">Email</th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-slate-1000 uppercase tracking-wider">Estado</th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-slate-1000 uppercase tracking-wider">Acciones</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Model != null && Model.Any())
                {
                    @foreach (var prov in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">@prov.RazonSocial</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">@prov.RUC</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@prov.Especialidad</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@prov.Telefono</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@prov.Email</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (prov.Estado)
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Activo</span>
                                }
                                else
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Inactivo</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium space-x-2">

                                <button type="button" class="p-1 text-slate-500 hover:text-blue-700 btn-editar-proveedor"
                                        data-modal-url="@Url.Action("GetProveedorParaEditar", "Proveedor", new { id = prov.Id })"
                                        title="Editar">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>

                                @if (prov.Estado)
                                {
                                    <button class="p-1 text-slate-500 hover:text-red-700 btn-desactivar-proveedor"
                                            data-id="@prov.Id"
                                            data-nombre="@prov.RazonSocial"
                                            title="Desactivar">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-4 text-center text-slate-500">No hay proveedores registrados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>