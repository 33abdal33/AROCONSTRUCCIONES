@model AROCONSTRUCCIONES.Dtos.ProveedorEdicionViewModelDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    bool esCrear = Model.Proveedor.Id == 0;
    string titulo = esCrear ? "Nuevo Proveedor" : "Editar Proveedor";
    string accion = esCrear ? "Create" : "Edit";
}

<div x-data="{ open: true }"
     x-show="open"
     x-transition:enter="ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     class="fixed inset-0 z-50 overflow-y-auto"
     style="display: none;">

    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

    <div class="flex items-center justify-center min-h-screen p-4">

        <div x-on:click.away="open = false"
             class="relative bg-white rounded-lg shadow-xl transform transition-all sm:my-8 sm:max-w-3xl sm:w-full">
            <form id="formProveedor"
                  asp-action="@accion"
                  asp-controller="Proveedor"
                  method="post"
                  data-form-ajax="true">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Proveedor.Id" />

                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4 border-b border-gray-200 rounded-t-lg">
                    <h3 class="text-xl leading-6 font-semibold text-gray-900">
                        @titulo
                    </h3>
                </div>

                <div class="p-6 space-y-4 max-h-[60vh] overflow-y-auto">
                    <p class="text-slate-500 text-sm mb-4">Ingrese la información del proveedor. Todos los campos con * son obligatorios.</p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="Proveedor.RazonSocial" class="block text-sm font-medium text-gray-700">Nombre del Proveedor *</label>
                            <input asp-for="Proveedor.RazonSocial" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="EJ: Cementos del Pacífico" required />
                            <span asp-validation-for="Proveedor.RazonSocial" class="text-sm text-red-600"></span>
                        </div>
                        <div>
                            <label asp-for="Proveedor.RUC" class="block text-sm font-medium text-gray-700">RUC *</label>
                            <input asp-for="Proveedor.RUC" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="12345678901" required />
                            <span asp-validation-for="Proveedor.RUC" class="text-sm text-red-600"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Proveedor.Especialidad" class="block text-sm font-medium text-gray-700">Categoría</label>
                        <select asp-for="Proveedor.Especialidad" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="categoriaProveedorFiltro">
                            <option value="">Materiales Diversos</option>
                            @foreach (var cat in Model.CategoriasMateriales)
                            {
                                <option value="@cat" selected="@(Model.Proveedor.Especialidad == cat)">@cat</option>
                            }
                        </select>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="Proveedor.NombreContacto" class="block text-sm font-medium text-gray-700">Nombre del Contacto</label>
                            <input asp-for="Proveedor.NombreContacto" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="EJ: Luis Ramírez" />
                        </div>
                        <div>
                            <label asp-for="Proveedor.Telefono" class="block text-sm font-medium text-gray-700">Teléfono</label>
                            <input asp-for="Proveedor.Telefono" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="+51 999 888 777" />
                        </div>
                    </div>
                    <div>
                        <label asp-for="Proveedor.Email" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
                        <input asp-for="Proveedor.Email" type="email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="ventas@proveedor.com" />
                        <span asp-validation-for="Proveedor.Email" class="text-sm text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="Proveedor.Direccion" class="block text-sm font-medium text-gray-700">Dirección</label>
                        <textarea asp-for="Proveedor.Direccion" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" rows="2" placeholder="Av. Industrial 1234, Lima"></textarea>
                    </div>
                    <div class="flex items-center">
                        <input asp-for="Proveedor.Estado" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                        <label asp-for="Proveedor.Estado" class="ml-2 block text-sm text-gray-900">Proveedor Activo</label>
                    </div>

                    <hr class="my-4" />

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Materiales que Suministra *</label>
                        <p class="text-slate-500 text-sm" id="filtro-descripcion">
                            Seleccione los materiales de la categoría: @(Model.Proveedor.Especialidad ?? "Materiales Diversos")
                        </p>

                        <div class="mt-2 h-48 overflow-y-auto border border-gray-300 rounded-md p-4 space-y-2" id="materiales-checkbox-list">
                            @if (Model.TodosLosMateriales == null || !Model.TodosLosMateriales.Any())
                            {
                                <p class="text-center p-5 text-slate-500">No hay materiales en el sistema.</p>
                            }
                            else
                            {
                                @foreach (var material in Model.TodosLosMateriales)
                                {
                                    <div class="flex items-center" data-categoria="@material.Categoria">
                                        <input class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                                               type="checkbox"
                                               name="MaterialesAsignadosIds"
                                               value="@material.Id"
                                               id="mat-@material.Id"
                                               @(Model.MaterialesAsignadosIds.Contains(material.Id) ? "checked" : "") />
                                        <label class="ml-2 text-sm text-gray-700" for="mat-@material.Id">
                                            @material.Nombre
                                            <span class="text-slate-500">(@material.Codigo)</span>
                                        </label>
                                    </div>
                                }
                                <div id="no-materiales-en-categoria" class="text-center p-5 text-slate-500" style="display: none;">
                                    <i class="fas fa-info-circle"></i>
                                    <p class="mb-0">No hay materiales en esta categoría.</p>
                                    <small>Seleccione "Materiales Diversos" para verlos todos.</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 px-6 py-3 sm:flex sm:flex-row-reverse rounded-b-lg">
                    <button type="submit"
                            class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm">
                        Guardar
                    </button>
                    <button type="button" x-on:click="open = false"
                            class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:w-auto sm:text-sm">
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

