@model AROCONSTRUCCIONES.Dtos.AlmacenDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    bool esCrear = Model.Id == 0;
    string titulo = esCrear ? "Registrar Nuevo Almacén" : "Actualizar Configuración";
    string accion = esCrear ? "Create" : "Edit";
    string subtitulo = esCrear ? "Defina una nueva ubicación física para el control de inventario." : "Modifique los parámetros de la ubicación seleccionada.";
}

<div x-data="{ open: true }"
     x-show="open"
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0 scale-95"
     x-transition:enter-end="opacity-100 scale-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100 scale-100"
     x-transition:leave-end="opacity-0 scale-95"
     class="fixed inset-0 z-[60] overflow-y-auto"
     style="display: none;">

    <div class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm transition-opacity"></div>

    <div class="flex items-center justify-center min-h-screen p-4 text-center">
        <div x-on:click.away="open = false"
             class="relative bg-white rounded-[2rem] shadow-2xl transform transition-all sm:my-8 sm:max-w-lg sm:w-full overflow-hidden border border-slate-200">

            <form id="formAlmacen"
                  asp-action="@accion"
                  asp-controller="Almacen"
                  asp-route-id="@Model.Id"
                  method="post"
                  data-form-ajax="true">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="bg-slate-50/50 px-8 pt-8 pb-6 border-b border-slate-100 text-left">
                    <div class="flex items-center gap-4 mb-2">
                        <div class="w-12 h-12 bg-indigo-600 rounded-2xl flex items-center justify-center shadow-lg shadow-indigo-100">
                            <i class="fas fa-warehouse text-white text-xl"></i>
                        </div>
                        <div>
                            <h3 class="text-xl font-black text-slate-800 tracking-tight">@titulo</h3>
                            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest">Módulo de Logística</p>
                        </div>
                    </div>
                    <p class="text-sm text-slate-500 font-medium">@subtitulo</p>
                </div>

                <div class="p-8 space-y-6 text-left">

                    <div class="space-y-2">
                        <label asp-for="Nombre" class="text-[11px] font-black text-slate-400 uppercase tracking-widest ml-1">Nombre del Almacén *</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-slate-400">
                                <i class="fas fa-tag text-xs"></i>
                            </span>
                            <input asp-for="Nombre"
                                   class="w-full pl-11 pr-4 py-3 rounded-xl border-none bg-slate-100 focus:bg-white focus:ring-4 focus:ring-indigo-500/10 outline-none text-sm font-bold text-slate-700 transition-all placeholder:text-slate-300"
                                   placeholder="Ej: Almacén Central ARO" required />
                        </div>
                        <span asp-validation-for="Nombre" class="text-[10px] font-bold text-rose-500 ml-1"></span>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="Ubicacion" class="text-[11px] font-black text-slate-400 uppercase tracking-widest ml-1">Dirección / Referencia</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-slate-400">
                                <i class="fas fa-map-marker-alt text-xs"></i>
                            </span>
                            <input asp-for="Ubicacion"
                                   class="w-full pl-11 pr-4 py-3 rounded-xl border-none bg-slate-100 focus:bg-white focus:ring-4 focus:ring-indigo-500/10 outline-none text-sm font-bold text-slate-700 transition-all placeholder:text-slate-300"
                                   placeholder="Ej: Av. Principal 123, Lima" />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="Responsable" class="text-[11px] font-black text-slate-400 uppercase tracking-widest ml-1">Encargado de Almacén</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-slate-400">
                                <i class="fas fa-user-tie text-xs"></i>
                            </span>
                            <input asp-for="Responsable"
                                   class="w-full pl-11 pr-4 py-3 rounded-xl border-none bg-slate-100 focus:bg-white focus:ring-4 focus:ring-indigo-500/10 outline-none text-sm font-bold text-slate-700 transition-all placeholder:text-slate-300"
                                   placeholder="Nombre del responsable" />
                        </div>
                    </div>

                    <div class="flex items-center justify-between p-4 bg-slate-50 rounded-2xl border border-slate-100">
                        <div>
                            <p class="text-sm font-bold text-slate-700">Estado Operativo</p>
                            <p class="text-[10px] font-medium text-slate-400 uppercase">Habilitar para movimientos</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input asp-for="Estado" type="checkbox" class="sr-only peer">
                            <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                        </label>
                    </div>

                </div>

                <div class="px-8 py-6 bg-slate-50/50 border-t border-slate-100 flex flex-col sm:flex-row-reverse gap-3">
                    <button type="submit"
                            class="w-full sm:w-auto px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white text-xs font-black rounded-xl shadow-lg shadow-indigo-100 transition-all uppercase tracking-widest">
                        <i class="fas fa-save mr-2"></i> Guardar Cambios
                    </button>
                    <button type="button" x-on:click="open = false"
                            class="w-full sm:w-auto px-8 py-3 bg-white border border-slate-200 text-slate-500 hover:bg-slate-100 text-xs font-black rounded-xl transition-all uppercase tracking-widest">
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        const $form = $('#formAlmacen');
        if ($form.length && $.validator && $.validator.unobtrusive) {
             $.validator.unobtrusive.parse($form);
        }
    });
</script>