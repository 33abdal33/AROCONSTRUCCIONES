@model IEnumerable<AROCONSTRUCCIONES.Dtos.AlmacenDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@* 1. CSS PARA LIMPIEZA DE LÍNEAS DE LIBRERÍA *@
<style>
    #dataTableAlmacenes {
        border-bottom: none !important;
    }

        #dataTableAlmacenes thead th {
            border-bottom: none !important;
            letter-spacing: normal !important;
        }

        #dataTableAlmacenes.no-footer {
            border-bottom: none !important;
        }

        #dataTableAlmacenes tbody tr:last-child td {
            border-bottom: none !important;
        }
</style>

@* Silenciamos alertas técnicas de DataTables *@
<script>$.fn.dataTable.ext.errMode = 'none';</script>

<div class="pt-2">
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-6 gap-4 px-2">
        <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-indigo-600 rounded-2xl flex items-center justify-center shadow-lg shadow-indigo-100 transition-transform hover:scale-105">
                <i class="fas fa-warehouse text-white text-2xl"></i>
            </div>
            <div>
                <h3 class="text-2xl font-bold text-slate-800 tracking-tight">Maestro de Almacenes</h3>
                <p class="text-sm font-medium text-slate-500">Configuración de sedes físicas y control de responsables.</p>
            </div>
        </div>

        <button type="button"
                class="flex-1 lg:flex-none bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-xl text-xs font-bold shadow-lg shadow-indigo-200 transition-all flex items-center justify-center gap-2 uppercase tracking-widest"
                data-modal-url="@Url.Action("GetAlmacenParaEditar", "Almacen", new { id = 0 })">
            <i class="fas fa-plus"></i> Nuevo Almacén
        </button>
    </div>

    <div class="bg-slate-100/50 p-2 rounded-2xl mb-6 border border-slate-200/60 shadow-sm">
        <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-slate-400">
                <i class="fas fa-search text-sm"></i>
            </span>
            <input type="text" id="almacenSearchInput"
                   class="w-full pl-11 pr-4 py-2.5 rounded-xl border-transparent bg-white focus:ring-4 focus:ring-indigo-500/10 outline-none text-sm font-medium transition-all shadow-sm placeholder:text-slate-400"
                   placeholder="Buscar por nombre, ubicación o encargado...">
        </div>
    </div>

    <partial name="_MensajesTempDataPartial" />

    <div class="bg-white rounded-3xl border border-slate-200 shadow-xl shadow-slate-200/30 overflow-hidden">
        <table class="min-w-full divide-y divide-slate-100" id="dataTableAlmacenes">
            <thead class="bg-slate-50">
                <tr>
                    <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider">Sede / Ubicación</th>
                    <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider">Responsable</th>
                    <th class="px-6 py-4 text-center text-[11px] font-bold text-slate-400 uppercase tracking-wider">Estado</th>
                    <th class="px-6 py-4 w-24"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-50 bg-white">
                @if (Model != null && Model.Any())
                {
                    @foreach (var almacen in Model)
                    {
                        <tr class="hover:bg-slate-50 transition-all group">
                            <td class="px-6 py-5">
                                <div class="text-sm font-bold text-slate-800 group-hover:text-indigo-600 transition-colors">@almacen.Nombre</div>
                                <div class="flex items-center gap-1.5 text-[10px] font-bold text-slate-400 uppercase mt-0.5">
                                    <i class="fas fa-map-marker-alt text-[9px]"></i>
                                    @almacen.Ubicacion
                                </div>
                            </td>
                            <td class="px-6 py-5">
                                <div class="flex items-center gap-2">
                                    <div class="w-8 h-8 rounded-full bg-indigo-50 flex items-center justify-center text-[10px] font-bold text-indigo-600 border border-indigo-100">
                                        @(string.IsNullOrEmpty(almacen.Responsable) ? "?" : almacen.Responsable.Substring(0, 1).ToUpper())
                                    </div>
                                    <div class="text-sm font-semibold text-slate-600">@(almacen.Responsable ?? "Sin asignar")</div>
                                </div>
                            </td>
                            <td class="px-6 py-5 text-center">
                                @if (almacen.Estado)
                                {
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-[10px] font-bold uppercase bg-emerald-100 text-emerald-700 border border-emerald-200/50">
                                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 mr-2"></span>
                                        Operativo
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-[10px] font-bold uppercase bg-slate-100 text-slate-500 border border-slate-200">
                                        <span class="w-1.5 h-1.5 rounded-full bg-slate-400 mr-2"></span>
                                        Inactivo
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-5 text-right">
                                <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button type="button"
                                            class="w-9 h-9 flex items-center justify-center text-slate-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-xl transition-all btn-editar-almacen"
                                            data-modal-url="@Url.Action("GetAlmacenParaEditar", "Almacen", new { id = almacen.Id })"
                                            title="Editar Configuración">
                                        <i class="fas fa-pencil-alt text-sm"></i>
                                    </button>

                                    @if (almacen.Estado)
                                    {
                                        <button class="w-9 h-9 flex items-center justify-center text-slate-400 hover:text-rose-600 hover:bg-rose-50 rounded-xl transition-all btn-desactivar-almacen"
                                                data-id="@almacen.Id"
                                                data-nombre="@almacen.Nombre"
                                                title="Desactivar Sede">
                                            <i class="fas fa-power-off text-sm"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex flex-col md:flex-row justify-between items-center px-4 gap-4">
        <div id="almacenesInfoContainer" class="text-xs font-bold text-slate-400 uppercase tracking-wider"></div>
        <div id="almacenesPaginationContainer" class="flex gap-1.5"></div>
    </div>
</div>

<script>
    $(document).ready(function() {
        const table = $('#dataTableAlmacenes').DataTable({
            "dom": "t",
            "pageLength": 10,
            "destroy": true,
            "language": { "zeroRecords": "No se encontraron almacenes registrados." },
            "order": [[0, 'asc']],
            "drawCallback": function(settings) {
                const api = this.api();
                const info = api.page.info();

                $('#almacenesInfoContainer').html(
                    `SEDES REGISTRADAS: <span class="text-slate-800">${info.recordsTotal}</span> — PÁGINA <span class="text-slate-800">${info.page + 1}</span>`
                );

                renderAlmPagination(api);
            }
        });

        // Buscador sincronizado
        $('#almacenSearchInput').on('keyup', function() {
            table.search(this.value).draw();
        });

        function renderAlmPagination(api) {
            const info = api.page.info();
            let html = '';
            if(info.pages <= 1) { $('#almacenesPaginationContainer').html(''); return; }

            html += `<button onclick="almPage('prev')" class="${info.page === 0 ? 'opacity-30 cursor-not-allowed' : 'hover:bg-white border-slate-200'} p-2 rounded-lg border bg-slate-50 text-slate-600 transition-all shadow-sm"><i class="fas fa-chevron-left text-xs"></i></button>`;

            for(let i = 0; i < info.pages; i++) {
                const active = i === info.page ? 'bg-indigo-600 text-white border-indigo-600 shadow-md' : 'bg-white border-slate-200 text-slate-600 hover:bg-slate-50';
                html += `<button onclick="almGoTo(${i})" class="px-3.5 py-1.5 rounded-lg border font-bold text-xs transition-all ${active}">${i + 1}</button>`;
            }

            html += `<button onclick="almPage('next')" class="${info.page === info.pages - 1 ? 'opacity-30 cursor-not-allowed' : 'hover:bg-white border-slate-200'} p-2 rounded-lg border bg-slate-50 text-slate-600 transition-all shadow-sm"><i class="fas fa-chevron-right text-xs"></i></button>`;

            $('#almacenesPaginationContainer').html(html);
        }

        window.almGoTo = function(idx) { table.page(idx).draw('page'); };
        window.almPage = function(dir) {
            if(dir === 'prev') table.page('previous').draw('page');
            else table.page('next').draw('page');
        };
    });
</script>