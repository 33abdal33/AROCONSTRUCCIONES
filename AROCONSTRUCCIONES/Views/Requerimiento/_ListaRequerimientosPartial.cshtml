@model IEnumerable<AROCONSTRUCCIONES.Dtos.RequerimientoListDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var proyectoId = ViewData["ProyectoId"] ?? 0;
}

<div class="bg-white rounded-lg shadow-md">
    <div class="p-4 md:p-6">

        <!-- Controles de la Tabla -->
        <div class="flex flex-col md:flex-row justify-between items-center mb-4">
            <h3 class="text-xl font-semibold text-slate-700">
                <i class="fas fa-clipboard-list mr-2 text-blue-600"></i>
                Requerimientos de Material
            </h3>
            <div class="flex items-center space-x-2 mt-4 md:mt-0">
                <!-- El botón de Nuevo Requerimiento AHORA abre un modal -->
                <button type="button"
                        class="flex-shrink-0 flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none"
                        data-modal-url="@Url.Action("Create", "Requerimiento", new { proyectoId = proyectoId })">
                    <i class="fas fa-plus mr-2"></i> Nuevo Requerimiento
                </button>
            </div>
        </div>
        <!-- Tabla de Requerimientos -->
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200" id="dataTableRequerimientos">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-1000 uppercase">Código Req.</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-1000 uppercase">Fecha</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-1000 uppercase">Solicitante</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-1000 uppercase">Estado</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-slate-1000 uppercase">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var req in Model)
                        {
                            string estadoClass = "bg-gray-100 text-gray-800";
                            switch (req.Estado)
                            {
                                case "Pendiente": estadoClass = "bg-yellow-100 text-yellow-800"; break;
                                case "Aprobado": estadoClass = "bg-blue-100 text-blue-800"; break;
                                case "Despachado": estadoClass = "bg-green-100 text-green-800"; break;
                                case "Cancelado": estadoClass = "bg-red-100 text-red-800"; break;
                            }

                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">@req.Codigo</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@req.Fecha.ToString("dd/MM/yyyy")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">@req.Solicitante</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @estadoClass">
                                        @req.Estado
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium space-x-2">

                                    <button type="button" class="p-1 text-slate-500 hover:text-blue-700" title="Ver Detalles"
                                            data-modal-url="@Url.Action("Details", "Requerimiento", new { id = req.Id })">
                                        <i class="fas fa-eye"></i>
                                    </button>

                                    @if (req.Estado == "Pendiente")
                                    {
                                        <button class="p-1 text-slate-500 hover:text-red-700" title="Cancelar">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-6 py-4 text-center text-slate-500">
                                Este proyecto aún no tiene requerimientos de material.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
