@model AROCONSTRUCCIONES.Dtos.RequerimientoCreateDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var proyectosList = ViewBag.Proyectos as SelectList;
    var materialesList = ViewBag.Materiales as IEnumerable<SelectListItem>;
}

@* Estilos para scrollbar y limpieza de Alpine *@
<style>
    [x-cloak] {
        display: none !important;
    }

    .custom-scrollbar::-webkit-scrollbar {
        width: 5px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #e2e8f0;
        border-radius: 10px;
    }
</style>

<div x-data="{ open: true }"
     x-show="open"
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0 scale-95"
     x-transition:enter-end="opacity-100 scale-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100 scale-100"
     x-transition:leave-end="opacity-0 scale-95"
     class="fixed inset-0 z-[70] overflow-y-auto"
     x-cloak>

    <div class="fixed inset-0 bg-slate-900/70 backdrop-blur-sm transition-opacity"></div>

    <div class="flex items-center justify-center min-h-screen p-4 text-center">
        <div @@click.away="open = false"
             class="relative bg-white rounded-[2.5rem] shadow-2xl transform transition-all sm:my-8 sm:max-w-5xl sm:w-full overflow-hidden border border-slate-200">

            <form id="formRequerimiento" asp-action="Create" asp-controller="Requerimiento" method="post" data-form-ajax="true">
                @Html.AntiForgeryToken()

                <div class="bg-slate-50 px-10 pt-8 pb-6 border-b border-slate-200 text-left">
                    <div class="flex items-center gap-5">
                        <div class="w-14 h-14 bg-indigo-600 rounded-2xl flex items-center justify-center shadow-xl shadow-indigo-100">
                            <i class="fas fa-clipboard-list text-white text-2xl"></i>
                        </div>
                        <div>
                            <h3 class="text-2xl font-black text-slate-900 tracking-tight uppercase">Nuevo Requerimiento</h3>
                            <p class="text-xs font-bold text-indigo-600 uppercase tracking-widest">Planificación técnica de insumos</p>
                        </div>
                    </div>
                </div>

                <div class="p-10 space-y-10 text-left max-h-[70vh] overflow-y-auto custom-scrollbar">

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 p-8 bg-slate-50 rounded-[2rem] border border-slate-100 shadow-inner">
                        <div class="space-y-2">
                            <label asp-for="IdProyecto" class="text-[11px] font-black text-slate-800 uppercase tracking-widest ml-1">Proyecto Destino *</label>
                            <select asp-for="IdProyecto" class="w-full px-4 py-3 rounded-xl border-2 border-slate-100 focus:bg-white focus:border-indigo-500 focus:ring-0 outline-none text-sm font-bold text-slate-700 transition-all cursor-pointer shadow-sm" asp-items="proyectosList" required>
                                <option value="">Seleccione obra...</option>
                            </select>
                            <span asp-validation-for="IdProyecto" class="text-[10px] font-bold text-rose-600 ml-1 uppercase"></span>
                        </div>
                        <div class="space-y-2">
                            <label asp-for="Codigo" class="text-[11px] font-black text-slate-800 uppercase tracking-widest ml-1">Código de Solicitud</label>
                            <input readonly asp-for="Codigo" class="w-full px-4 py-3 rounded-xl border-none bg-slate-200 text-slate-500 text-sm font-mono font-bold" />
                        </div>
                        <div class="space-y-2">
                            <label asp-for="Fecha" class="text-[11px] font-black text-slate-800 uppercase tracking-widest ml-1">Fecha de Emisión *</label>
                            <input asp-for="Fecha" type="date" class="w-full px-4 py-3 rounded-xl border-2 border-slate-100 focus:bg-white focus:border-indigo-500 focus:ring-0 outline-none text-sm font-bold text-slate-700 transition-all shadow-sm" required />
                        </div>
                        <div class="md:col-span-2 space-y-2">
                            <label asp-for="Solicitante" class="text-[11px] font-black text-slate-800 uppercase tracking-widest ml-1">Personal Solicitante / Ing. Responsable *</label>
                            <input asp-for="Solicitante" class="w-full px-4 py-3 rounded-xl border-2 border-slate-100 focus:bg-white focus:border-indigo-500 focus:ring-0 outline-none text-sm font-bold text-slate-700 transition-all shadow-sm" placeholder="Nombre completo del solicitante" required />
                        </div>
                        <div class="space-y-2">
                            <label asp-for="Area" class="text-[11px] font-black text-slate-800 uppercase tracking-widest ml-1">Frente de Trabajo / Área</label>
                            <input asp-for="Area" class="w-full px-4 py-3 rounded-xl border-2 border-slate-100 focus:bg-white focus:border-indigo-500 focus:ring-0 outline-none text-sm font-bold text-slate-700 transition-all shadow-sm" placeholder="Ej: Fase de Cimentación" />
                        </div>
                    </div>

                    <div class="space-y-4">
                        <div class="flex items-center gap-3 ml-1">
                            <span class="w-8 h-px bg-indigo-200"></span>
                            <h4 class="text-[11px] font-black text-indigo-600 uppercase tracking-[0.2em]">Carga de Items al Detalle</h4>
                        </div>

                        <div class="p-2 bg-slate-900 rounded-[1.5rem] shadow-2xl flex flex-col md:flex-row gap-2">
                            <div class="flex-1 p-1">
                                <select id="selectMaterial" class="w-full bg-slate-800 border-none rounded-xl py-3 px-5 text-sm font-bold text-white focus:ring-2 focus:ring-indigo-500 transition-all cursor-pointer" asp-items="materialesList">
                                    <option value="">Buscar material en catálogo...</option>
                                </select>
                            </div>
                            <div class="w-full md:w-32 p-1">
                                <input type="number" id="inputCantidad" class="w-full bg-slate-800 border-none rounded-xl py-3 px-4 text-sm font-bold text-white text-right focus:ring-2 focus:ring-indigo-500 transition-all" placeholder="0.00">
                            </div>
                            <div class="w-full md:w-40 p-1">
                                <button type="button" id="btnAnadirMaterial" class="w-full h-full bg-indigo-600 hover:bg-indigo-500 text-white rounded-xl font-black text-xs uppercase tracking-widest transition-all shadow-lg shadow-indigo-900/20">
                                    <i class="fas fa-plus-circle mr-2"></i> Añadir Item
                                </button>
                            </div>
                        </div>

                        <div class="bg-white rounded-[2rem] border border-slate-200 shadow-sm overflow-hidden mt-6">
                            <table class="min-w-full divide-y divide-slate-100">
                                <thead class="bg-slate-50">
                                    <tr>
                                        <th class="px-8 py-4 text-left text-[10px] font-black text-slate-400 uppercase tracking-widest">Descripción del Insumo</th>
                                        <th class="px-8 py-4 text-right text-[10px] font-black text-slate-400 uppercase tracking-widest w-40">Cantidad Solicitada</th>
                                        <th class="px-8 py-4 w-20 text-center"></th>
                                    </tr>
                                </thead>
                                <tbody id="tablaDetallesBody" class="divide-y divide-slate-50 bg-white">
                                    <tr id="fila-vacia">
                                        <td colspan="3" class="px-8 py-16 text-center">
                                            <div class="flex flex-col items-center opacity-20">
                                                <i class="fas fa-layer-group text-5xl mb-4"></i>
                                                <p class="text-sm font-black uppercase tracking-[0.2em]">Bandeja de requerimientos vacía</p>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <span asp-validation-for="Detalles" class="text-[10px] font-bold text-rose-600 ml-1 uppercase"></span>
                    </div>
                </div>

                <div class="px-10 py-8 bg-slate-50 border-t border-slate-200 flex flex-col sm:flex-row-reverse gap-3">
                    <button type="submit" class="w-full sm:w-auto px-12 py-4 bg-indigo-600 hover:bg-indigo-700 text-white text-xs font-black rounded-2xl shadow-xl shadow-indigo-100 transition-all uppercase tracking-widest">
                        <i class="fas fa-save mr-2"></i> Procesar Requerimiento
                    </button>
                    <button type="button" @@click="open = false" class="w-full sm:w-auto px-10 py-4 bg-white border-2 border-slate-200 text-slate-600 hover:bg-slate-50 text-xs font-black rounded-2xl transition-all uppercase tracking-widest">
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        let detalleIndex = 0;
        const $form = $('#formRequerimiento');
        const $tablaBody = $('#tablaDetallesBody');
        const $selectMaterial = $('#selectMaterial');
        const $inputCantidad = $('#inputCantidad');
        const $btnAnadir = $('#btnAnadirMaterial');

        function toggleFilaVacia() {
            const hasRows = $tablaBody.find('tr').not('#fila-vacia').length > 0;
            $('#fila-vacia').toggleClass('hidden', hasRows);
        }

        $btnAnadir.off('click').on('click', function (e) {
            e.preventDefault();
            const materialId = $selectMaterial.val();
            const materialTexto = $selectMaterial.find('option:selected').text();
            const cantidadNueva = parseFloat($inputCantidad.val());

            if (!materialId || isNaN(cantidadNueva) || cantidadNueva <= 0) {
                Swal.fire({ icon: 'warning', title: 'Atención', text: 'Seleccione un material e ingrese una cantidad válida.', background: '#f8fafc' });
                return;
            }

            // LÓGICA ANTI-DUPLICADOS
            let filaExistente = null;
            $tablaBody.find('tr').each(function () {
                const idEnFila = $(this).find('input[name$=".IdMaterial"]').val();
                if (idEnFila === materialId) {
                    filaExistente = $(this);
                    return false;
                }
            });

            if (filaExistente) {
                const $inputCantFila = filaExistente.find('input[name$=".Cantidad"]');
                const cantidadAnterior = parseFloat($inputCantFila.val());
                const sumaTotal = cantidadAnterior + cantidadNueva;

                $inputCantFila.val(sumaTotal);
                filaExistente.find('.display-cantidad').text(sumaTotal.toFixed(2));

                filaExistente.addClass('bg-indigo-50');
                setTimeout(() => filaExistente.removeClass('bg-indigo-50'), 1000);
            } else {
                const filaHtml = `
                    <tr class="text-sm transition-all group animate-in fade-in slide-in-from-left-2 duration-300">
                        <td class="px-8 py-5">
                            <div class="flex flex-col">
                                <span class="text-sm font-bold text-slate-800 uppercase tracking-tight">${materialTexto}</span>
                                <span class="text-[10px] font-black text-indigo-400 uppercase tracking-tighter">Insumo Verificado</span>
                            </div>
                            <input type="hidden" name="Detalles.Index" value="${detalleIndex}" />
                            <input type="hidden" name="Detalles[${detalleIndex}].IdMaterial" value="${materialId}" />
                        </td>
                        <td class="px-8 py-5 text-right">
                            <span class="text-base font-black text-slate-900 display-cantidad">${cantidadNueva.toFixed(2)}</span>
                            <input type="hidden" name="Detalles[${detalleIndex}].Cantidad" value="${cantidadNueva}" />
                        </td>
                        <td class="px-8 py-5 text-center">
                            <button type="button" class="w-10 h-10 flex items-center justify-center text-slate-300 hover:text-rose-600 hover:bg-rose-50 rounded-xl transition-all btn-remover-fila" title="Quitar item">
                                <i class="fas fa-trash-alt text-sm"></i>
                            </button>
                        </td>
                    </tr>`;

                $tablaBody.append(filaHtml);
                detalleIndex++;
            }

            toggleFilaVacia();
            $selectMaterial.val('').trigger('change');
            $inputCantidad.val('');
            $selectMaterial.focus();
        });

        $tablaBody.on('click', '.btn-remover-fila', function () {
            $(this).closest('tr').remove();
            toggleFilaVacia();
        });

        if ($.validator && $.validator.unobtrusive) {
             $.validator.unobtrusive.parse($form);
        }
    });
</script>