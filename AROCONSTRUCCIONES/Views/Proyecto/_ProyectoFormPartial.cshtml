@model AROCONSTRUCCIONES.Dtos.ProyectoDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    bool esCrear = Model.Id == 0;
    string titulo = esCrear ? "Nuevo Proyecto" : "Editar Proyecto";
    string formAction = esCrear
        ? Url.Action("Create", "Proyecto")
        : Url.Action("Edit", "Proyecto", new { id = Model.Id });
}

<form id="formProyecto" action="@formAction" method="post">
    @Html.AntiForgeryToken()

    @if (!esCrear)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="modal-header">
        <h5 class="modal-title">@titulo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="NombreProyecto" class="form-label">Nombre del Proyecto *</label>
                <input asp-for="NombreProyecto" class="form-control" required />
                <span asp-validation-for="NombreProyecto" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="CodigoProyecto" class="form-label">Código *</label>
                <input asp-for="CodigoProyecto" class="form-control" required />
                <span asp-validation-for="CodigoProyecto" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="NombreCliente" class="form-label">Cliente</label>
                <input asp-for="NombreCliente" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Ubicacion" class="form-label">Ubicación</label>
                <input asp-for="Ubicacion" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Responsable" class="form-label">Responsable (Ej: Ing. Residente)</label>
                <input asp-for="Responsable" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Estado" class="form-label">Estado *</label>
                <select asp-for="Estado" class="form-select" required>
                    <option value="Planificación">Planificación</option>
                    <option value="En Ejecución">En Ejecución</option>
                    <option value="Finalizado">Finalizado</option>
                    <option value="Pausado">Pausado</option>
                </select>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Presupuesto" class="form-label">Presupuesto (S/.)</label>
                <input asp-for="Presupuesto" type="number" step="1000" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="AvancePorcentaje" class="form-label">Avance (%)</label>
                <input asp-for="AvancePorcentaje" type="number" min="0" max="100" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="FechaInicio" class="form-label">Fecha de Inicio</label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
            </div>
        </div>

        @if (!esCrear)
        {
            <div class="mb-3">
                <label asp-for="CostoEjecutado" class="form-label">Costo Ejecutado (S/.)</label>
                <input asp-for="CostoEjecutado" class="form-control" readonly disabled />
                <small class="text-muted">Este campo se calcula automáticamente con las salidas de almacén.</small>
            </div>
        }

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>