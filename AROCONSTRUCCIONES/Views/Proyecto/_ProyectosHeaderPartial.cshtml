@model AROCONSTRUCCIONES.Dtos.ProyectoDashboardDto

<div class="compras-almacen-header mb-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div>
            <h2 class="fw-semibold text-dark mb-1">Gestión de Proyectos</h2>
            <p class="text-muted mb-0">Control integral de obras y cronogramas</p>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col">
            <div class="card resumen-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <p class="text-muted mb-1 small">Proyectos Activos</p>
                    <h4 class="fw-bold mb-0">@Model.ProyectosActivos</h4>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card resumen-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <p class="text-muted mb-1 small">Avance Promedio</p>
                    <h4 class="fw-bold mb-0">@Model.AvancePromedio%</h4>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card resumen-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <p class="text-muted mb-1 small">En Cronograma</p>
                    <h4 class="fw-bold mb-0">@Model.EnCronograma</h4>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card resumen-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <p class="text-muted mb-1 small">Presupuesto Total</p>
                    <h4 class="fw-bold mb-0">@Model.PresupuestoTotal.ToString("C0")</h4>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card resumen-card shadow-sm border-0 h-100">
                <div class="card-body">
                    <p class="text-muted mb-1 small">Ejecutado Total</p>
                    <h4 class="fw-bold mb-0">@Model.EjecutadoTotal.ToString("C0")</h4>
                </div>
            </div>
        </div>
    </div>
</div>