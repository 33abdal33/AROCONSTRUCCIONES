@model AROCONSTRUCCIONES.Dtos.ProyectoDashboardDto

<div class="mb-6">
    <div>
        <h2 class="text-2xl font-semibold text-slate-800">Gestión de Proyectos</h2>
        <p class="text-slate-500">Control integral de obras y cronogramas</p>
    </div>
</div>

<!-- Contenedor de las 5 Tarjetas (KPIs) -->
<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6 mb-6">

    <!-- Tarjeta 1: Proyectos Activos -->
    <div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between">
        <div>
            <p class="text-sm font-medium text-slate-500">Proyectos Activos</p>
            <p class="text-3xl font-bold text-slate-800">@Model.ProyectosActivos</p>
            <p class="text-xs text-green-500">+2 este mes</p> <!-- Dato estático de la plantilla -->
        </div>
        <div class="text-4xl text-blue-500 opacity-70">
            <i class="fas fa-briefcase"></i>
        </div>
    </div>

    <!-- Tarjeta 2: Avance Promedio -->
    <div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between">
        <div>
            <p class="text-sm font-medium text-slate-500">Avance Promedio</p>
            <p class="text-3xl font-bold text-slate-800">@Model.AvancePromedio%</p>
            <p class="text-xs text-green-500">+5% vs mes anterior</p> <!-- Dato estático -->
        </div>
        <div class="text-4xl text-teal-500 opacity-70">
            <i class="fas fa-chart-pie"></i>
        </div>
    </div>

    <!-- Tarjeta 3: En Cronograma -->
    <div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between">
        <div>
            <p class="text-sm font-medium text-slate-500">En Cronograma</p>
            <p class="text-3xl font-bold text-slate-800">@Model.EnCronograma</p>
            <p class="text-xs text-slate-400">75% del total</p> <!-- Dato estático -->
        </div>
        <div class="text-4xl text-green-500 opacity-70">
            <i class="fas fa-calendar-check"></i>
        </div>
    </div>

    <!-- Tarjeta 4: Presupuesto Total -->
    <div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between">
        <div>
            <p class="text-sm font-medium text-slate-500">Presupuesto Total</p>
            <p class="text-3xl font-bold text-slate-800">@Model.PresupuestoTotal.ToString("C0")</p>
            <p class="text-xs text-slate-400">Ejecutado @Model.EjecutadoTotal.ToString("C0")</p>
        </div>
        <div class="text-4xl text-yellow-500 opacity-70">
            <i class="fas fa-dollar-sign"></i>
        </div>
    </div>

    <!-- Tarjeta 5: Costo Ejecutado (Dato no provisto en DTO, usamos el de la tarjeta anterior) -->
    <div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between">
        <div>
            <p class="text-sm font-medium text-slate-500">Ejecutado</p>
            <p class="text-3xl font-bold text-slate-800">@Model.EjecutadoTotal.ToString("C0")</p>
            <p class="text-xs text-red-500">68% del presupuesto</p> <!-- Dato estático -->
        </div>
        <div class="text-4xl text-red-500 opacity-70">
            <i class="fas fa-file-invoice-dollar"></i>
        </div>
    </div>
</div>