@model IEnumerable<AROCONSTRUCCIONES.Dtos.MaterialDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@* 1. CSS PARA ELIMINAR RUIDO VISUAL DE LIBRERÍAS *@
<style>
    #dataTableMateriales {
        border-bottom: none !important;
    }

        #dataTableMateriales thead th {
            border-bottom: none !important;
            letter-spacing: normal !important;
        }

        #dataTableMateriales.no-footer {
            border-bottom: none !important;
        }

        #dataTableMateriales tbody tr:last-child td {
            border-bottom: none !important;
        }
</style>

@* Silenciamos alertas de DataTables *@
<script>$.fn.dataTable.ext.errMode = 'none';</script>

<div class="pt-2">
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-6 gap-4">
        <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-indigo-600 rounded-2xl flex items-center justify-center shadow-lg shadow-indigo-100 transition-transform hover:scale-105">
                <i class="fas fa-cube text-white text-2xl"></i>
            </div>
            <div>
                <h3 class="text-2xl font-bold text-slate-800 tracking-tight">Catálogo de Materiales</h3>
                <p class="text-sm font-medium text-slate-500">Gestión maestra de insumos, precios y unidades.</p>
            </div>
        </div>

        <button type="button"
                class="flex-1 lg:flex-none bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-xl text-xs font-bold shadow-lg shadow-indigo-200 transition-all flex items-center justify-center gap-2 uppercase tracking-widest"
                data-modal-url="@Url.Action("GetMaterialParaEditar", "Material", new { id = 0 })">
            <i class="fas fa-plus"></i> Nuevo Material
        </button>
    </div>

    <div class="bg-slate-100/50 p-2 rounded-2xl mb-6 border border-slate-200/60 shadow-sm">
        <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-slate-400">
                <i class="fas fa-search"></i>
            </span>
            <input type="text" id="materialSearchInput"
                   class="w-full pl-11 pr-4 py-2.5 rounded-xl border-transparent bg-white focus:ring-4 focus:ring-indigo-500/10 outline-none text-sm font-medium transition-all shadow-sm placeholder:text-slate-400"
                   placeholder="Buscar por nombre, categoría o código de referencia...">
        </div>
    </div>

    <partial name="_MensajesTempDataPartial" />

    <div class="bg-white rounded-3xl border border-slate-200 shadow-xl shadow-slate-200/30 overflow-hidden">
        <table class="min-w-full divide-y divide-slate-100" id="dataTableMateriales">
            <thead class="bg-slate-50">
                <tr>
                    <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider">Código</th>
                    <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider">Material / Categoría</th>
                    <th class="px-6 py-4 text-left text-[11px] font-bold text-slate-400 uppercase tracking-wider">Unidad</th>
                    <th class="px-6 py-4 text-right text-[11px] font-bold text-slate-400 uppercase tracking-wider">Precio Base</th>
                    <th class="px-6 py-4 text-center text-[11px] font-bold text-slate-400 uppercase tracking-wider">Estado</th>
                    <th class="px-6 py-4 w-24"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-50">
                @if (Model != null && Model.Any())
                {
                    @foreach (var mat in Model)
                    {
                        <tr class="hover:bg-slate-50 transition-all group">
                            <td class="px-6 py-4 text-sm font-mono font-bold text-indigo-600">@mat.Codigo</td>
                            <td class="px-6 py-4">
                                <div class="text-sm font-bold text-slate-800">@mat.Nombre</div>
                                <div class="text-[10px] font-bold text-slate-400 uppercase">@mat.Categoria</div>
                            </td>
                            <td class="px-6 py-4 text-sm font-semibold text-slate-500 italic">@mat.UnidadMedida</td>
                            <td class="px-6 py-4 text-right">
                                <span class="text-sm font-black text-slate-900">S/ @mat.PrecioUnitario.ToString("N2")</span>
                            </td>
                            <td class="px-6 py-4 text-center">
                                @if (mat.Estado)
                                {
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-[10px] font-bold uppercase bg-emerald-100 text-emerald-700 border border-emerald-200">
                                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 mr-2"></span>
                                        Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-[10px] font-bold uppercase bg-rose-100 text-rose-700 border border-rose-200">
                                        <span class="w-1.5 h-1.5 rounded-full bg-rose-500 mr-2"></span>
                                        Inactivo
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button type="button"
                                            class="w-8 h-8 flex items-center justify-center text-slate-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all btn-editar-material"
                                            data-modal-url="@Url.Action("GetMaterialParaEditar", "Material", new { id = mat.Id })"
                                            title="Editar">
                                        <i class="fas fa-pencil-alt text-xs"></i>
                                    </button>
                                    @if (mat.Estado)
                                    {
                                        <button class="w-8 h-8 flex items-center justify-center text-slate-400 hover:text-rose-600 hover:bg-rose-50 rounded-lg transition-all btn-desactivar-material"
                                                data-id="@mat.Id"
                                                data-nombre="@mat.Nombre"
                                                title="Eliminar/Desactivar">
                                            <i class="fas fa-trash-alt text-xs"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="mt-6 flex flex-col md:flex-row justify-between items-center px-4 gap-4">
        <div id="materialesInfoContainer" class="text-xs font-bold text-slate-400 uppercase tracking-wider"></div>
        <div id="materialesPaginationContainer" class="flex gap-1.5"></div>
    </div>
</div>

<script>
    $(document).ready(function() {
        const table = $('#dataTableMateriales').DataTable({
            "dom": "t",
            "pageLength": 10,
            "destroy": true,
            "language": { "zeroRecords": "No se encontraron materiales en el catálogo." },
            "order": [[1, 'asc']],
            "drawCallback": function(settings) {
                const api = this.api();
                const info = api.page.info();

                $('#materialesInfoContainer').html(
                    `TOTAL CATÁLOGO: <span class="text-slate-800">${info.recordsTotal}</span> — MOSTRANDO <span class="text-slate-800">${info.start + 1} A ${info.end}</span>`
                );

                renderMatPagination(api);
            }
        });

        // Buscador sincronizado
        $('#materialSearchInput').on('keyup', function() {
            table.search(this.value).draw();
        });

        function renderMatPagination(api) {
            const info = api.page.info();
            let html = '';
            if(info.pages <= 1) { $('#materialesPaginationContainer').html(''); return; }

            html += `<button onclick="matPage('prev')" class="${info.page === 0 ? 'opacity-30 cursor-not-allowed' : 'hover:bg-white border-slate-200'} p-2 rounded-lg border bg-slate-50 text-slate-600 transition-all shadow-sm"><i class="fas fa-chevron-left text-xs"></i></button>`;

            for(let i = 0; i < info.pages; i++) {
                const active = i === info.page ? 'bg-indigo-600 text-white border-indigo-600 shadow-md' : 'bg-white border-slate-200 text-slate-600 hover:bg-slate-50';
                html += `<button onclick="matGoTo(${i})" class="px-3.5 py-1.5 rounded-lg border font-bold text-xs transition-all ${active}">${i + 1}</button>`;
            }

            html += `<button onclick="matPage('next')" class="${info.page === info.pages - 1 ? 'opacity-30 cursor-not-allowed' : 'hover:bg-white border-slate-200'} p-2 rounded-lg border bg-slate-50 text-slate-600 transition-all shadow-sm"><i class="fas fa-chevron-right text-xs"></i></button>`;

            $('#materialesPaginationContainer').html(html);
        }

        window.matGoTo = function(idx) { table.page(idx).draw('page'); };
        window.matPage = function(dir) {
            if(dir === 'prev') table.page('previous').draw('page');
            else table.page('next').draw('page');
        };
    });
</script>