@model AROCONSTRUCCIONES.Dtos.OrdenCompraCreateDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var proveedoresList = ViewBag.Proveedores as SelectList;
    int initialCount = Model.Detalles != null ? Model.Detalles.Count : 0;
}

<div x-data="{ open: true }"
     x-show="open"
     class="fixed inset-0 z-50 overflow-y-auto">

    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

    <div class="flex items-center justify-center min-h-screen p-4">
        <div x-on:click.away="open = false"
             class="relative bg-white rounded-lg shadow-xl transform transition-all sm:my-8 sm:max-w-6xl sm:w-full">

            <form asp-controller="OrdenCompra" asp-action="Create" method="post" id="formOrdenCompra">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ProyectoId" />

                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4 border-b border-gray-200 rounded-t-lg">
                    <h3 class="text-xl font-semibold text-slate-700">
                        <i class="fas fa-file-invoice mr-2 text-blue-600"></i>
                        Nueva Orden de Compra
                    </h3>
                </div>

                <div class="p-6 space-y-4 max-h-[60vh] overflow-y-auto">
                    @Html.ValidationSummary(false, "", new { @class = "text-red-600 bg-red-50 p-3 rounded-md mb-4 text-sm" })

                    <fieldset class="border border-gray-200 p-4 rounded-md mb-6">
                        <legend class="px-2 font-medium text-slate-600">Datos Principales</legend>

                        @if (Model.ProyectoId.HasValue)
                        {
                            <div class="mb-4 bg-blue-50 p-3 rounded border border-blue-100 text-sm text-blue-800 flex items-center">
                                <i class="fas fa-project-diagram mr-2"></i>
                                <strong>Vinculado al Proyecto ID: @Model.ProyectoId</strong>
                            </div>
                        }

                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                            <div class="md:col-span-2">
                                <label asp-for="IdProveedor" class="block text-sm font-medium text-gray-700">Proveedor *</label>
                                <select asp-for="IdProveedor" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" asp-items="proveedoresList" required>
                                    <option value="">Seleccione un proveedor...</option>
                                </select>
                                @if (ViewBag.FiltroCatalogoActivo == true)
                                {
                                    <div class="mt-2 flex items-center text-xs text-amber-600 bg-amber-50 p-2 rounded border border-amber-100">
                                        <i class="fas fa-info-circle mr-1 text-amber-500"></i>
                                        <span>Se han filtrado los proveedores según el catálogo de materiales requeridos.</span>
                                    </div>
                                }
                            </div>
                            <div>
                                <label asp-for="Codigo" class="block text-sm font-medium text-gray-700">Código OC</label>
                                <input asp-for="Codigo" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" placeholder="Autogenerado" />
                            </div>
                            <div>
                                <label asp-for="Moneda" class="block text-sm font-medium text-gray-700">Moneda *</label>
                                <select asp-for="Moneda" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
                                    <option value="PEN">Soles (PEN)</option>
                                    <option value="USD">Dólares (USD)</option>
                                </select>
                            </div>

                            @* --- NUEVO: FORMA DE PAGO --- *@
                            <div>
                                <label asp-for="FormaPago" class="block text-sm font-medium text-gray-700">Forma de Pago *</label>
                                <select asp-for="FormaPago" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" required>
                                    <option value="Contado">Contado</option>
                                    <option value="Crédito 7 días">Crédito 7 días</option>
                                    <option value="Crédito 15 días">Crédito 15 días</option>
                                    <option value="Crédito 30 días">Crédito 30 días</option>
                                    <option value="Transferencia">Transferencia</option>
                                </select>
                            </div>

                            <div>
                                <label asp-for="FechaEmision" class="block text-sm font-medium text-gray-700">Fecha Emisión</label>
                                <input asp-for="FechaEmision" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" />
                            </div>
                            <div class="md:col-span-2">
                                <label asp-for="Observaciones" class="block text-sm font-medium text-gray-700">Observaciones</label>
                                <textarea asp-for="Observaciones" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" rows="1"></textarea>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="border border-gray-200 p-4 rounded-md mb-6">
                        <legend class="px-2 font-medium text-slate-600">Detalle de Materiales</legend>

                        <div class="p-4 bg-slate-50 rounded-md mb-4">
                            <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">
                                <div class="md:col-span-5">
                                    <label class="block text-sm font-medium text-gray-700">Material</label>
                                    <select id="selectMaterial" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" disabled>
                                        <option value="">[Seleccione un Proveedor primero]</option>
                                    </select>
                                </div>
                                <div class="md:col-span-2">
                                    <label class="block text-sm font-medium text-gray-700">Cantidad</label>
                                    <input type="number" id="inputCantidad" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" min="0.01" step="any">
                                </div>
                                <div class="md:col-span-2">
                                    <label class="block text-sm font-medium text-gray-700">Precio Unit.</label>
                                    <input type="number" id="inputPrecio" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" min="0.01" step="any">
                                </div>
                                <div class="md:col-span-3">
                                    <button type="button" class="w-full py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium" id="btnAnadirMaterial">
                                        <i class="fas fa-plus mr-1"></i> Añadir
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="overflow-x-auto bg-white rounded-lg shadow border">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-slate-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase">Material</th>
                                        <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase" style="width: 120px;">Cantidad</th>
                                        <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase" style="width: 120px;">Precio Unit.</th>
                                        <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase" style="width: 150px;">Subtotal</th>
                                        <th class="px-6 py-3 text-center text-xs font-medium text-slate-500 uppercase" style="width: 80px;">Acción</th>
                                    </tr>
                                </thead>
                                <tbody id="tablaDetallesBody" class="bg-white divide-y divide-gray-200">
                                    @if (Model.Detalles != null && Model.Detalles.Any())
                                    {
                                        for (int i = 0; i < Model.Detalles.Count; i++)
                                        {
                                            var det = Model.Detalles[i];
                                            var nombreMaterial = !string.IsNullOrEmpty(det.MaterialNombre) ? det.MaterialNombre : $"Material ID: {det.IdMaterial}";
                                            var subtotal = det.Cantidad * det.PrecioUnitario;

                                            <tr id="fila-detalle-@i" class="text-sm">
                                                <td class="px-6 py-4 font-medium text-slate-900">
                                                    @nombreMaterial
                                                    <input type="hidden" name="Detalles.Index" value="@i" />
                                                    <input type="hidden" name="Detalles[@i].IdMaterial" value="@det.IdMaterial" />
                                                    <input type="hidden" name="Detalles[@i].IdDetalleRequerimiento" value="@det.IdDetalleRequerimiento" />
                                                </td>
                                                <td class="px-6 py-4 text-right">
                                                    <input type="number" step="any" name="Detalles[@i].Cantidad" value="@det.Cantidad.ToString("0.00")"
                                                           class="w-24 text-right border-gray-300 rounded-md text-sm row-cantidad"
                                                           oninput="actualizarFila(this)" />
                                                </td>
                                                <td class="px-6 py-4 text-right">
                                                    <input type="number" step="any" name="Detalles[@i].PrecioUnitario" value="@det.PrecioUnitario.ToString("0.00")"
                                                           class="w-24 text-right border-gray-300 rounded-md text-sm row-precio"
                                                           oninput="actualizarFila(this)" />
                                                </td>
                                                <td class="px-6 py-4 text-right font-medium text-slate-800 subtotal-celda" data-subtotal="@subtotal">
                                                    S/ @subtotal.ToString("N2")
                                                </td>
                                                <td class="px-6 py-4 text-center">
                                                    <button type="button" class="text-red-600 btn-remover-fila"><i class="fas fa-trash"></i></button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr id="fila-vacia">
                                            <td colspan="5" class="px-6 py-4 text-center text-slate-500">No hay materiales añadidos.</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="bg-slate-50">
                                    <tr>
                                        <td colspan="3" class="px-6 py-3 text-right text-sm font-bold text-slate-700">TOTAL:</td>
                                        <td class="px-6 py-3 text-right text-lg font-bold text-slate-900" id="totalGeneral">S/ 0.00</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </fieldset>
                </div>

                <div class="bg-gray-50 px-6 py-3 sm:flex sm:flex-row-reverse rounded-b-lg gap-2">
                    <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium flex items-center">
                        <i class="fas fa-save mr-2"></i> Guardar OC
                    </button>
                    <button type="button" x-on:click="open = false" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 font-medium">
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // --- FUNCIÓN GLOBAL PARA RECALCULAR ---
    function actualizarFila(input) {
        const $tr = $(input).closest('tr');
        const cantidad = parseFloat($tr.find('.row-cantidad').val()) || 0;
        const precio = parseFloat($tr.find('.row-precio').val()) || 0;

        const subtotal = cantidad * precio;

        // Actualizamos visualmente el subtotal de la fila
        $tr.find('.subtotal-celda').attr('data-subtotal', subtotal).text(`S/ ${subtotal.toFixed(2)}`);

        // Actualizar total general
        actualizarTotalGeneral();
    }

    function actualizarTotalGeneral() {
        let total = 0;
        $('.subtotal-celda').each(function() {
            total += parseFloat($(this).attr('data-subtotal')) || 0;
        });
        $('#totalGeneral').text(`S/ ${total.toFixed(2)}`);
    }

    $(document).ready(function () {
        let detalleIndex = @initialCount;
        const $tablaBody = $('#tablaDetallesBody');
        const $form = $('#formOrdenCompra');

        function toggleFilaVacia() {
            if ($tablaBody.find('tr').not('#fila-vacia').length > 0) {
                $('#fila-vacia').addClass('hidden');
            } else {
                $('#fila-vacia').removeClass('hidden');
            }
        }

        // Inicializar
        actualizarTotalGeneral();
        toggleFilaVacia();

        // Dropdown en cascada Proveedor -> Materiales
        $('#IdProveedor').on('change', function() {
            const proveedorId = $(this).val();
            const $selectMat = $('#selectMaterial');
            $selectMat.empty().prop('disabled', true).append('<option>Cargando...</option>');

            if (!proveedorId) {
                $selectMat.empty().append('<option>[Seleccione Proveedor]</option>');
                return;
            }

            $.get('@Url.Action("GetMaterialesPorProveedor", "OrdenCompra")', { proveedorId: proveedorId }, function(data) {
                $selectMat.empty().append('<option value="">Seleccione material...</option>');
                $.each(data, function(i, item) {
                    $selectMat.append(`<option value="${item.value}" data-texto="${item.text}">${item.text}</option>`);
                });
                $selectMat.prop('disabled', false);
            });
        });

        // Añadir material manualmente
        $('#btnAnadirMaterial').on('click', function () {
            const matId = $('#selectMaterial').val();
            const matTexto = $('#selectMaterial option:selected').data('texto');
            const cant = parseFloat($('#inputCantidad').val()) || 0;
            const prec = parseFloat($('#inputPrecio').val()) || 0;

            if (!matId || cant <= 0 || prec <= 0) {
                Swal.fire('Atención', 'Complete cantidad y precio válidos', 'warning');
                return;
            }

            const sub = cant * prec;
            const fila = `
                <tr id="fila-detalle-${detalleIndex}" class="text-sm">
                    <td class="px-6 py-4 font-medium text-slate-900">
                        ${matTexto}
                        <input type="hidden" name="Detalles.Index" value="${detalleIndex}" />
                        <input type="hidden" name="Detalles[${detalleIndex}].IdMaterial" value="${matId}" />
                        <input type="hidden" name="Detalles[${detalleIndex}].IdDetalleRequerimiento" value="" />
                    </td>
                    <td class="px-6 py-4 text-right">
                        <input type="number" step="any" name="Detalles[${detalleIndex}].Cantidad" value="${cant.toFixed(2)}"
                               class="w-24 text-right border-gray-300 rounded-md text-sm row-cantidad" oninput="actualizarFila(this)" />
                    </td>
                    <td class="px-6 py-4 text-right">
                        <input type="number" step="any" name="Detalles[${detalleIndex}].PrecioUnitario" value="${prec.toFixed(2)}"
                               class="w-24 text-right border-gray-300 rounded-md text-sm row-precio" oninput="actualizarFila(this)" />
                    </td>
                    <td class="px-6 py-4 text-right font-medium subtotal-celda" data-subtotal="${sub}">
                        S/ ${sub.toFixed(2)}
                    </td>
                    <td class="px-6 py-4 text-center">
                        <button type="button" class="text-red-600 btn-remover-fila"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>`;

            $tablaBody.append(fila);
            detalleIndex++;
            actualizarTotalGeneral();
            toggleFilaVacia();
            $('#inputCantidad, #inputPrecio').val('');
        });

        // Remover fila
        $tablaBody.on('click', '.btn-remover-fila', function () {
            $(this).closest('tr').remove();
            actualizarTotalGeneral();
            toggleFilaVacia();
        });

        // Envío por AJAX
        $form.on('submit', function (e) {
            e.preventDefault();

            if ($tablaBody.find('tr').not('#fila-vacia').length === 0) {
                Swal.fire('Error', 'Debe añadir materiales', 'warning');
                return;
            }

            const $btn = $(this).find('button[type="submit"]');
            $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-2"></i> Guardando...');

            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: $(this).serialize(),
                success: function (res) {
                    if (res.success) {
                        Swal.fire('¡Éxito!', res.message, 'success').then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire('Error', res.message, 'error');
                        $btn.prop('disabled', false).html('<i class="fas fa-save mr-2"></i> Guardar OC');
                    }
                },
                error: function () {
                    Swal.fire('Error', 'Ocurrió un error en el servidor', 'error');
                    $btn.prop('disabled', false).html('<i class="fas fa-save mr-2"></i> Guardar OC');
                }
            });
        });
    });
</script>