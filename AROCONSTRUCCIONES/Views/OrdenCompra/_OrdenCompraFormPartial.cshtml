@model AROCONSTRUCCIONES.Dtos.OrdenCompraCreateDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var proveedoresList = ViewBag.Proveedores as SelectList;
    int initialCount = Model.Detalles != null ? Model.Detalles.Count : 0;
}

<div x-data="{ open: true }"
     x-show="open"
     x-cloak
     class="fixed inset-0 z-50 overflow-y-auto">

    @* Fondo oscuro con desenfoque *@
    <div class="fixed inset-0 bg-slate-900 bg-opacity-60 backdrop-blur-sm transition-opacity"></div>

    <div class="flex items-center justify-center min-h-screen p-4">
        <div @@click.away ="open = false"
             class="relative bg-white rounded-xl shadow-2xl transform transition-all sm:my-8 sm:max-w-6xl sm:w-full border border-slate-200">

            <form asp-controller="OrdenCompra" asp-action="Create" method="post" id="formOrdenCompra">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ProyectoId" />

                @* Cabecera *@
                <div class="bg-slate-50 px-6 py-4 border-b border-slate-200 rounded-t-xl flex justify-between items-center">
                    <h3 class="text-xl font-bold text-slate-800 flex items-center">
                        <i class="fas fa-file-invoice-dollar mr-3 text-blue-600"></i>
                        Nueva Orden de Compra
                    </h3>
                    <button type="button" @@click ="open = false" class="text-slate-400 hover:text-slate-600 btn-cerrar-modal">
                        <i class="fas fa-times text-2xl"></i>
                    </button>
                </div>

                <div class="p-6 space-y-6 max-h-[70vh] overflow-y-auto">

                    @* Resumen de validación *@
                    <div id="validationSummary" class="hidden text-red-600 bg-red-50 p-3 rounded-md text-sm border border-red-100"></div>

                    @* Datos del Proyecto *@
                    @if (Model.ProyectoId.HasValue)
                    {
                        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r-md flex items-center">
                            <i class="fas fa-project-diagram text-blue-500 mr-3"></i>
                            <span class="text-sm text-blue-800 font-semibold">Vinculado al Proyecto ID: @Model.ProyectoId</span>
                        </div>
                    }

                    @* Fieldset: Datos Principales *@
                    <fieldset class="border border-slate-200 p-5 rounded-xl bg-white shadow-sm">
                        <legend class="px-2 text-xs font-bold text-slate-500 uppercase tracking-widest">Información General</legend>
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-2">
                            <div class="md:col-span-2">
                                <label asp-for="IdProveedor" class="block text-xs font-bold text-slate-700 mb-1">PROVEEDOR *</label>
                                <select asp-for="IdProveedor" class="w-full rounded-lg border-slate-300 shadow-sm focus:ring-blue-500 text-sm" asp-items="proveedoresList" required>
                                    <option value="">Seleccione un proveedor...</option>
                                </select>
                            </div>
                            <div>
                                <label asp-for="Codigo" class="block text-xs font-bold text-slate-700 mb-1">CÓDIGO OC</label>
                                <input asp-for="Codigo" class="w-full rounded-lg border-slate-300 shadow-sm text-sm bg-slate-50 font-mono" placeholder="Autogenerado" />
                            </div>
                            <div>
                                <label asp-for="Moneda" class="block text-xs font-bold text-slate-700 mb-1">MONEDA *</label>
                                <select asp-for="Moneda" class="w-full rounded-lg border-slate-300 shadow-sm text-sm">
                                    <option value="PEN">Soles (S/.)</option>
                                    <option value="USD">Dólares ($)</option>
                                </select>
                            </div>
                            <div>
                                <label asp-for="FormaPago" class="block text-xs font-bold text-slate-700 mb-1">FORMA DE PAGO *</label>
                                <select asp-for="FormaPago" class="w-full rounded-lg border-slate-300 shadow-sm text-sm" required>
                                    <option value="Contado">Contado</option>
                                    <option value="Crédito 15 días">Crédito 15 días</option>
                                    <option value="Crédito 30 días">Crédito 30 días</option>
                                    <option value="Transferencia">Transferencia</option>
                                </select>
                            </div>
                            <div>
                                <label asp-for="FechaEmision" class="block text-xs font-bold text-slate-700 mb-1">FECHA EMISIÓN</label>
                                <input asp-for="FechaEmision" type="date" class="w-full rounded-lg border-slate-300 shadow-sm text-sm" />
                            </div>
                            <div class="md:col-span-2">
                                <label asp-for="Observaciones" class="block text-xs font-bold text-slate-700 mb-1">OBSERVACIONES</label>
                                <textarea asp-for="Observaciones" class="w-full rounded-lg border-slate-300 shadow-sm text-sm" rows="1"></textarea>
                            </div>
                        </div>
                    </fieldset>

                    @* Fieldset: Detalle de Materiales *@
                    <fieldset class="border border-slate-200 p-5 rounded-xl bg-white shadow-sm">
                        <legend class="px-2 text-xs font-bold text-slate-500 uppercase tracking-widest">Items de la Orden</legend>

                        @* Barra de entrada de materiales *@
                        <div class="grid grid-cols-1 md:grid-cols-12 gap-3 items-end mb-6 bg-slate-50 p-4 rounded-lg border border-slate-100">
                            <div class="md:col-span-5">
                                <label class="block text-[10px] font-black text-slate-500 mb-1 uppercase">Material</label>
                                <select id="selectMaterial" class="w-full rounded-lg border-slate-300 text-sm disabled:bg-slate-100" disabled>
                                    <option value="">[Seleccione un Proveedor]</option>
                                </select>
                            </div>
                            <div class="md:col-span-2">
                                <label class="block text-[10px] font-black text-slate-500 mb-1 uppercase">Cant.</label>
                                <input type="number" id="inputCantidad" class="w-full rounded-lg border-slate-300 text-sm text-right" placeholder="0.00">
                            </div>
                            <div class="md:col-span-2">
                                <label class="block text-[10px] font-black text-slate-500 mb-1 uppercase">P. Unit.</label>
                                <input type="number" id="inputPrecio" class="w-full rounded-lg border-slate-300 text-sm text-right" placeholder="0.00">
                            </div>
                            <div class="md:col-span-3">
                                <button type="button" class="w-full py-2 bg-slate-800 text-white rounded-lg hover:bg-black font-bold text-sm transition-all shadow" id="btnAnadirMaterial">
                                    <i class="fas fa-plus mr-2"></i>Añadir Item
                                </button>
                            </div>
                        </div>

                        @* Tabla *@
                        <div class="overflow-hidden border border-slate-200 rounded-lg">
                            <table class="min-w-full divide-y divide-slate-200">
                                <thead class="bg-slate-100">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-[10px] font-bold text-slate-500 uppercase">Descripción</th>
                                        <th class="px-6 py-3 text-right text-[10px] font-bold text-slate-500 uppercase w-28">Cantidad</th>
                                        <th class="px-6 py-3 text-right text-[10px] font-bold text-slate-500 uppercase w-32">P. Unitario</th>
                                        <th class="px-6 py-3 text-right text-[10px] font-bold text-slate-500 uppercase w-36">Subtotal</th>
                                        <th class="px-6 py-3 text-center text-[10px] font-bold text-slate-500 uppercase w-16"></th>
                                    </tr>
                                </thead>
                                <tbody id="tablaDetallesBody" class="bg-white divide-y divide-slate-100">
                                    @if (Model.Detalles != null && Model.Detalles.Any())
                                    {
                                        for (int i = 0; i < Model.Detalles.Count; i++)
                                        {
                                            var det = Model.Detalles[i];
                                            var subtotal = det.Cantidad * det.PrecioUnitario;
                                            <tr id="fila-detalle-@i" class="text-sm group" data-material-id="@det.IdMaterial">
                                                <td class="px-6 py-4">
                                                    <span class="font-semibold text-slate-700">@det.MaterialNombre</span>
                                                    <input type="hidden" name="Detalles.Index" value="@i" />
                                                    <input type="hidden" name="Detalles[@i].IdMaterial" value="@det.IdMaterial" />
                                                    <input type="hidden" name="Detalles[@i].IdDetalleRequerimiento" value="@det.IdDetalleRequerimiento" />
                                                </td>
                                                <td class="px-6 py-4">
                                                    <input type="number" step="any" name="Detalles[@i].Cantidad" value="@det.Cantidad.ToString("0.00")"
                                                           class="w-full text-right border-slate-200 rounded-md text-sm row-cantidad" oninput="actualizarFila(this)" />
                                                </td>
                                                <td class="px-6 py-4">
                                                    <input type="number" step="any" name="Detalles[@i].PrecioUnitario" value="@det.PrecioUnitario.ToString("0.00")"
                                                           class="w-full text-right border-slate-200 rounded-md text-sm row-precio" oninput="actualizarFila(this)" />
                                                </td>
                                                <td class="px-6 py-4 text-right font-bold text-slate-900 subtotal-celda" data-subtotal="@subtotal">
                                                    S/ @subtotal.ToString("N2")
                                                </td>
                                                <td class="px-6 py-4 text-center">
                                                    <button type="button" class="text-slate-300 hover:text-red-600 btn-remover-fila"><i class="fas fa-trash-alt"></i></button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    <tr id="fila-vacia" class="@(initialCount > 0 ? "hidden" : "")">
                                        <td colspan="5" class="px-6 py-8 text-center text-slate-400 italic">No hay materiales añadidos.</td>
                                    </tr>
                                </tbody>
                                <tfoot class="bg-slate-50">
                                    <tr>
                                        <td colspan="3" class="px-6 py-4 text-right text-sm font-bold text-slate-600">TOTAL ESTIMADO:</td>
                                        <td class="px-6 py-4 text-right text-lg font-black text-slate-900" id="totalGeneral">S/ 0.00</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </fieldset>
                </div>

                @* Pie de Modal *@
                <div class="bg-slate-50 px-8 py-4 border-t border-slate-200 flex justify-end gap-3 rounded-b-xl">
                    <button type="button" @@click ="open = false" class="px-6 py-2 text-sm font-bold text-slate-500 hover:text-slate-700 btn-cerrar-modal">
                        CANCELAR
                    </button>
                    <button type="submit" class="px-8 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-bold shadow-lg transition-all flex items-center">
                        <i class="fas fa-save mr-2"></i> GUARDAR ORDEN DE COMPRA
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // --- LÓGICA DE CÁLCULO ---
    function actualizarFila(input) {
        const $tr = $(input).closest('tr');
        const cantidad = parseFloat($tr.find('.row-cantidad').val()) || 0;
        const precio = parseFloat($tr.find('.row-precio').val()) || 0;
        const subtotal = cantidad * precio;

        $tr.find('.subtotal-celda').attr('data-subtotal', subtotal).text(`S/ ${subtotal.toLocaleString('es-PE', { minimumFractionDigits: 2 })}`);
        actualizarTotalGeneral();
    }

    function actualizarTotalGeneral() {
        let total = 0;
        $('.subtotal-celda').each(function() {
            total += parseFloat($(this).attr('data-subtotal')) || 0;
        });
        const moneda = $('#Moneda').val() === 'PEN' ? 'S/' : '$';
        $('#totalGeneral').text(`${moneda} ${total.toLocaleString('es-PE', { minimumFractionDigits: 2 })}`);
    }

    $(document).ready(function () {
        let detalleIndex = @initialCount;
        const $tablaBody = $('#tablaDetallesBody');
        const $form = $('#formOrdenCompra');

        function toggleFilaVacia() {
            if ($tablaBody.find('tr').not('#fila-vacia').length > 0) {
                $('#fila-vacia').addClass('hidden');
            } else {
                $('#fila-vacia').removeClass('hidden');
            }
        }

        actualizarTotalGeneral();

        // 1. CIERRE ROBUSTO
        $(document).off('click', '.btn-cerrar-modal').on('click', '.btn-cerrar-modal', function () {
            const $modalElement = $(this).closest('.fixed');
            $modalElement.fadeOut(200, function() {
                $(this).remove();
                $('#modal-placeholder').empty();
            });
        });

        // 2. CASCADA PROVEEDOR -> MATERIALES
        $('#IdProveedor').on('change', function() {
            const proveedorId = $(this).val();
            const $selectMat = $('#selectMaterial');
            $selectMat.empty().prop('disabled', true).append('<option>Cargando...</option>');

            if (!proveedorId) {
                $selectMat.empty().append('<option>[Seleccione Proveedor]</option>');
                return;
            }

            $.get('@Url.Action("GetMaterialesPorProveedor", "OrdenCompra")', { proveedorId: proveedorId }, function(data) {
                $selectMat.empty().append('<option value="">Seleccione material...</option>');
                $.each(data, function(i, item) {
                    $selectMat.append(`<option value="${item.value}" data-texto="${item.text}">${item.text}</option>`);
                });
                $selectMat.prop('disabled', false);
            });
        });

        // 3. AÑADIR MATERIAL (CON LÓGICA DE SUMA DE DUPLICADOS)
        $('#btnAnadirMaterial').on('click', function () {
            const matId = $('#selectMaterial').val();
            const matTexto = $('#selectMaterial option:selected').data('texto');
            const cantNueva = parseFloat($('#inputCantidad').val()) || 0;
            const prec = parseFloat($('#inputPrecio').val()) || 0;

            if (!matId || cantNueva <= 0 || prec <= 0) {
                Swal.fire('Atención', 'Complete material, cantidad y precio.', 'warning');
                return;
            }

            // BUSCAR DUPLICADO
            let filaExistente = $tablaBody.find(`tr[data-material-id="${matId}"]`);

            if (filaExistente.length > 0) {
                const $inputCant = filaExistente.find('.row-cantidad');
                const cantActual = parseFloat($inputCant.val()) || 0;
                const total = cantActual + cantNueva;
                $inputCant.val(total.toFixed(2));
                actualizarFila($inputCant);

                filaExistente.addClass('bg-blue-50');
                setTimeout(() => filaExistente.removeClass('bg-blue-50'), 1000);
            } else {
                const sub = cantNueva * prec;
                const fila = `
                    <tr id="fila-detalle-${detalleIndex}" class="text-sm transition-all" data-material-id="${matId}">
                        <td class="px-6 py-4">
                            <span class="font-semibold text-slate-700">${matTexto}</span>
                            <input type="hidden" name="Detalles.Index" value="${detalleIndex}" />
                            <input type="hidden" name="Detalles[${detalleIndex}].IdMaterial" value="${matId}" />
                        </td>
                        <td class="px-6 py-4">
                            <input type="number" step="any" name="Detalles[${detalleIndex}].Cantidad" value="${cantNueva.toFixed(2)}"
                                   class="w-full text-right border-slate-200 rounded-md text-sm row-cantidad" oninput="actualizarFila(this)" />
                        </td>
                        <td class="px-6 py-4">
                            <input type="number" step="any" name="Detalles[${detalleIndex}].PrecioUnitario" value="${prec.toFixed(2)}"
                                   class="w-full text-right border-slate-200 rounded-md text-sm row-precio" oninput="actualizarFila(this)" />
                        </td>
                        <td class="px-6 py-4 text-right font-bold text-slate-900 subtotal-celda" data-subtotal="${sub}">
                            S/ ${sub.toFixed(2)}
                        </td>
                        <td class="px-6 py-4 text-center">
                            <button type="button" class="text-slate-300 hover:text-red-600 btn-remover-fila"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>`;
                $tablaBody.append(fila);
                detalleIndex++;
            }

            actualizarTotalGeneral();
            toggleFilaVacia();
            $('#inputCantidad, #inputPrecio').val('');
        });

        // 4. ELIMINAR FILA
        $tablaBody.on('click', '.btn-remover-fila', function () {
            $(this).closest('tr').remove();
            actualizarTotalGeneral();
            toggleFilaVacia();
        });

        // 5. ENVÍO AJAX
        $form.on('submit', function (e) {
            e.preventDefault();
            const $btn = $(this).find('button[type="submit"]');
            $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-2"></i> PROCESANDO...');

            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: $(this).serialize(),
                success: function (res) {
                    if (res.success) {
                        Swal.fire('¡Éxito!', res.message, 'success').then(() => location.reload());
                    } else {
                        Swal.fire('Error', res.message, 'error');
                        $btn.prop('disabled', false).html('<i class="fas fa-save mr-2"></i> GUARDAR ORDEN DE COMPRA');
                    }
                }
            });
        });
    });
</script>