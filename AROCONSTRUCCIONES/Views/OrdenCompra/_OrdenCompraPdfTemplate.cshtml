@model AROCONSTRUCCIONES.Models.OrdenCompra

@{
    Layout = null;

    // --- CÁLCULOS DE TOTALES ---
    decimal subtotal = Model.SubTotal;
    decimal igv = Model.Impuesto;
    decimal totalFinal = Model.Total;
    string monedaSymbol = Model.Moneda == "USD" ? "$" : "S/";

    // --- LÓGICA DE RUTA DE IMAGEN ---
    string webRootPath = ViewData["WebRootPath"] as string;
    string logoUrl = "";

    if (!string.IsNullOrEmpty(webRootPath))
    {
        string logoPath = System.IO.Path.Combine(webRootPath, "Iconos", "ARO.png");
        if (System.IO.File.Exists(logoPath))
        {
            logoUrl = new System.Uri(logoPath).AbsoluteUri;
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Orden de Compra @Model.Codigo</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            font-size: 9px;
            color: #333;
            margin: 0;
            padding: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        /* --- Header --- */
        .header-table {
            margin-bottom: 20px;
        }

        .company-name {
            color: #1e40af;
            font-size: 16px;
            font-weight: bold;
            margin: 0;
        }

        .oc-box {
            border: 2px solid #1e40af;
            text-align: center;
        }

            .oc-box h2 {
                background-color: #1e40af;
                color: white;
                margin: 0;
                padding: 5px;
                font-size: 12px;
            }

            .oc-box p {
                font-size: 14px;
                font-weight: bold;
                color: #d00;
                margin: 5px;
            }

        /* --- Cajas de Datos --- */
        .data-box {
            border: 1px solid #ccc;
            margin-top: 10px;
            border-radius: 4px;
            overflow: hidden;
        }

        .data-box-header {
            background-color: #f1f5f9;
            color: #1e40af;
            font-weight: bold;
            padding: 5px;
            border-bottom: 1px solid #ccc;
        }

        .data-box-content {
            padding: 8px;
        }

        .label {
            font-weight: bold;
            width: 90px;
            color: #475569;
        }

        /* --- Tabla de Items --- */
        .items-table {
            margin-top: 15px;
        }

            .items-table th {
                background-color: #1e40af;
                color: white;
                padding: 8px;
                border: 1px solid #1e40af;
            }

            .items-table td {
                padding: 6px;
                border: 1px solid #e2e8f0;
            }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        /* --- Totales --- */
        .totals-table {
            float: right;
            width: 250px;
            margin-top: 10px;
        }

            .totals-table td {
                padding: 5px;
                border-bottom: 1px solid #eee;
            }

        .grand-total {
            background-color: #eff6ff;
            font-weight: bold;
            font-size: 11px;
        }

        .footer-info {
            margin-top: 20px;
            font-size: 8px;
            color: #64748b;
        }
    </style>
</head>
<body>

    <table class="header-table">
        <tr>
            <td style="width: 20%;">
                @if (!string.IsNullOrEmpty(logoUrl))
                {
                    <img src="@logoUrl" style="width: 120px;" />
                }
            </td>
            <td style="width: 50%; text-align: center;">
                <h1 class="company-name">ARO CONSTRUCTORA Y MINEROS E.I.R.L.</h1>
                <p>RUC: 20547282559 | Av. Jose Galvez N° 1146, Lima</p>
            </td>
            <td style="width: 30%;">
                <div class="oc-box">
                    <h2>ORDEN DE COMPRA</h2>
                    <p>@Model.Codigo</p>
                </div>
            </td>
        </tr>
    </table>

    <div class="data-box">
        <div class="data-box-header">DATOS DE LA OBRA / PROYECTO</div>
        <div class="data-box-content">
            <table>
                <tr>
                    <td class="label">PROYECTO:</td>
                    @* ROBUSTEZ: Usamos el nombre real del proyecto vinculado *@
                    <td>@(Model.Proyecto?.NombreProyecto ?? "GASTO ADMINISTRATIVO / GENERAL")</td>
                    <td class="label">FECHA:</td>
                    <td>@Model.FechaEmision.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <td class="label">UBICACIÓN:</td>
                    <td>@(Model.Proyecto?.Ubicacion ?? "SEDE CENTRAL")</td>
                    <td class="label">MONEDA:</td>
                    <td>@(Model.Moneda == "PEN" ? "SOLES (PEN)" : "DÓLARES (USD)")</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="data-box">
        <div class="data-box-header">DATOS DEL PROVEEDOR</div>
        <div class="data-box-content">
            <table>
                <tr>
                    <td class="label">RAZÓN SOCIAL:</td>
                    <td><strong>@Model.Proveedor?.RazonSocial</strong></td>
                    <td class="label">RUC:</td>
                    <td>@Model.Proveedor?.RUC</td>
                </tr>
                <tr>
                    <td class="label">DIRECCIÓN:</td>
                    <td>@Model.Proveedor?.Direccion</td>
                    <td class="label">CONTACTO:</td>
                    <td>@Model.Proveedor?.NombreContacto</td>
                </tr>
            </table>
        </div>
    </div>

    <table class="items-table">
        <thead>
            <tr>
                <th style="width: 5%;">ITEM</th>
                <th style="width: 45%;">DESCRIPCIÓN DEL MATERIAL</th>
                <th style="width: 10%;">UND</th>
                <th style="width: 10%;">CANT</th>
                <th style="width: 15%;">P. UNITARIO</th>
                <th style="width: 15%;">TOTAL</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var item in Model.Detalles)
            {
                <tr>
                    <td class="text-center">@(i++)</td>
                    <td>@item.Material?.Nombre</td>
                    <td class="text-center">@item.Material?.UnidadMedida</td>
                    <td class="text-right">@item.Cantidad.ToString("N2")</td>
                    <td class="text-right">@monedaSymbol @item.PrecioUnitario.ToString("N2")</td>
                    <td class="text-right">@monedaSymbol @item.ImporteTotal.ToString("N2")</td>
                </tr>
            }
            @* Relleno para mantener estética *@
            @for (int j = 0; j < (8 - Model.Detalles.Count); j++)
            {
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            }
        </tbody>
    </table>

    <table style="width: 100%; margin-top: 15px;">
        <tr>
            <td style="vertical-align: top; width: 60%;">
                <div style="font-weight:bold; margin-bottom:5px;">OBSERVACIONES:</div>
                <div style="border: 1px solid #ccc; padding: 10px; min-height: 60px;">
                    @Model.Observaciones
                </div>
            </td>
            <td style="vertical-align: top; width: 40%;">
                <table class="totals-table">
                    <tr>
                        <td class="label">SUBTOTAL</td>
                        <td class="text-right">@monedaSymbol @subtotal.ToString("N2")</td>
                    </tr>
                    <tr>
                        <td class="label">IGV (18%)</td>
                        <td class="text-right">@monedaSymbol @igv.ToString("N2")</td>
                    </tr>
                    <tr class="grand-total">
                        <td class="label">TOTAL A PAGAR</td>
                        <td class="text-right">@monedaSymbol @totalFinal.ToString("N2")</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

    <div style="margin-top: 40px;">
        <table style="text-align: center;">
            <tr>
                <td style="width: 33%; border-top: 1px solid #000; padding-top: 5px;">Solicitado por</td>
                <td style="width: 33%;"></td>
                <td style="width: 33%; border-top: 1px solid #000; padding-top: 5px;">Aprobado Gerencia</td>
            </tr>
        </table>
    </div>

    <div class="footer-info">
        * Esta es una representación impresa de una Orden de Compra electrónica generada por el Sistema ERP AROCONSTRUCCIONES.<br />
        * Favor de adjuntar copia de esta orden al momento de la entrega de materiales y/o factura.
    </div>

</body>
</html>