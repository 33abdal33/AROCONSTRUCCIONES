@model AROCONSTRUCCIONES.Dtos.RecepcionMaestroDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div x-data="{ open: true }"
     x-show="open"
     x-transition:enter="ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     class="fixed inset-0 z-50 overflow-y-auto"
     style="display: none;">

    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

    <div class="flex items-center justify-center min-h-screen p-4">

        <div x-on:click.away="open = false"
             class="relative bg-white rounded-lg shadow-xl transform transition-all sm:my-8 sm:max-w-3xl sm:w-full">

            <form id="formRecepcionOC"
                  asp-action="RegistrarRecepcion"
                  asp-controller="OrdenCompra"
                  method="post"
                  data-form-ajax="true">

                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OrdenCompraId" />
                <input type="hidden" asp-for="ProveedorId" />

                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4 border-b border-gray-200 rounded-t-lg">
                    <h3 class="text-xl leading-6 font-semibold text-gray-900">
                        Recepcionar Orden de Compra
                    </h3>
                </div>

                <div class="p-6 space-y-4 max-h-[60vh] overflow-y-auto">

                    <div class="p-3 bg-blue-50 border border-blue-200 text-blue-800 rounded-md mb-4 text-sm">
                        <strong>OC: @Model.CodigoOC</strong><br />
                        <strong>Proveedor:</strong> @Model.ProveedorNombre
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="AlmacenDestinoId" class="block text-sm font-medium text-gray-700">Almacén Destino *</label>
                            <select asp-for="AlmacenDestinoId" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" asp-items="@ViewBag.Almacenes" required>
                                <option value="">Seleccione almacén...</option>
                            </select>
                            <span asp-validation-for="AlmacenDestinoId" class="text-sm text-red-600"></span>
                        </div>
                        <div>
                            <label asp-for="NroFacturaGuia" class="block text-sm font-medium text-gray-700">Factura/Guía *</label>
                            <input asp-for="NroFacturaGuia" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                            <span asp-validation-for="NroFacturaGuia" class="text-sm text-red-600"></span>
                        </div>
                        <div>
                            <label asp-for="ResponsableNombre" class="block text-sm font-medium text-gray-700">Responsable *</label>
                            <input asp-for="ResponsableNombre" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required />
                            <span asp-validation-for="ResponsableNombre" class="text-sm text-red-600"></span>
                        </div>
                        <div>
                            <label asp-for="FechaRecepcion" class="block text-sm font-medium text-gray-700">Fecha Recepción</label>
                            <input asp-for="FechaRecepcion" type="datetime-local" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                            <span asp-validation-for="FechaRecepcion" class="text-sm text-red-600"></span>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <h6 class="font-semibold text-slate-700">Materiales a Recibir</h6>
                    <p class="text-sm text-slate-500">Ingrese las cantidades que están llegando físicamente.</p>

                    <div class="overflow-x-auto bg-white rounded-lg border">
                        <table class="min-w-full divide-y divide-gray-200 mt-2">
                            <thead class="bg-slate-50">
                                <tr>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 uppercase">Material</th>
                                    <th class="px-4 py-2 text-right text-xs font-medium text-slate-500 uppercase">Pendiente</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 uppercase" style="width: 130px;">Recibiendo Ahora</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @for (int i = 0; i < Model.Detalles.Count; i++)
                                {
                                    if (Model.Detalles[i].CantidadPendiente <= 0) { continue; }
                                    <tr>
                                        <td class="px-4 py-3">
                                            <div class="text-sm font-medium text-slate-900">@Model.Detalles[i].MaterialNombre</div>
                                            <small class="text-slate-500">(@Model.Detalles[i].UnidadMedida)</small>
                                            <input type="hidden" asp-for="Detalles[i].DetalleOrdenCompraId" />
                                            <input type="hidden" asp-for="Detalles[i].MaterialId" />
                                        </td>
                                        <td class="px-4 py-3 text-right">
                                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-slate-100 text-slate-700">
                                                @Model.Detalles[i].CantidadPendiente.ToString("N0")
                                            </span>
                                        </td>
                                        <td class="px-4 py-3">
                                            <input type="number" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                                   asp-for="Detalles[i].CantidadARecibir"
                                                   min="0"
                                                   max="@Model.Detalles[i].CantidadPendiente"
                                                   step="0.01" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="bg-gray-50 px-6 py-3 sm:flex sm:flex-row-reverse rounded-b-lg">
                    <button type="submit" class="flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm font-medium">
                        <i class="fas fa-save mr-2"></i> Registrar Ingreso
                    </button>
                    <button type="button" x-on:click="open = false" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 text-sm font-medium sm:mr-3 mt-2 sm:mt-0">
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>