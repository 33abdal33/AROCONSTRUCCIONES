@model AROCONSTRUCCIONES.Dtos.TransferenciaDto

<div x-data="{ open: true }" x-show="open" class="fixed inset-0 z-50 overflow-y-auto">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

    <div class="flex items-center justify-center min-h-screen p-4">
        <div x-on:click.away="open = false"
             class="relative bg-white rounded-lg shadow-xl transform transition-all sm:my-8 sm:max-w-lg sm:w-full">

            <div class="bg-amber-50 px-4 py-3 border-b border-amber-100 rounded-t-lg">
                <h3 class="text-lg font-semibold text-amber-800">
                    <i class="fas fa-exchange-alt mr-2"></i> Transferencia entre Almacenes
                </h3>
            </div>

            <form asp-controller="MovimientoInventario" asp-action="Transferir" method="post">
                @Html.AntiForgeryToken()

                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Almacén Origen *</label>
                        <select asp-for="AlmacenOrigenId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm" required asp-items="ViewBag.Almacenes">
                            <option value="">Seleccione origen...</option>
                        </select>
                        <span asp-validation-for="AlmacenOrigenId" class="text-xs text-red-600"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Almacén Destino *</label>
                        <select asp-for="AlmacenDestinoId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm" required asp-items="ViewBag.Almacenes">
                            <option value="">Seleccione destino...</option>
                        </select>
                        <span asp-validation-for="AlmacenDestinoId" class="text-xs text-red-600"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Material *</label>
                        <select asp-for="MaterialId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm" required asp-items="ViewBag.Materiales">
                            <option value="">Seleccione material...</option>
                        </select>
                        <span asp-validation-for="MaterialId" class="text-xs text-red-600"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Cantidad a Mover *</label>
                        <input asp-for="Cantidad" type="number" step="0.01" min="0.01" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm" required />
                        <span asp-validation-for="Cantidad" class="text-xs text-red-600"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700">Observación</label>
                        <textarea asp-for="Observacion" rows="2" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm" placeholder="Ej: Traslado por requerimiento de obra..."></textarea>
                    </div>
                </div>

                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse rounded-b-lg gap-2">
                    <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-amber-600 text-base font-medium text-white hover:bg-amber-700 focus:outline-none sm:w-auto sm:text-sm transition-colors">
                        Confirmar Transferencia
                    </button>
                    <button type="button" x-on:click="open = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:w-auto sm:text-sm">
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>